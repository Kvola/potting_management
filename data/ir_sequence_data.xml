<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Customer Orders -->
        <record id="seq_potting_customer_order" model="ir.sequence">
            <field name="name">Commande client empotage</field>
            <field name="code">potting.customer.order</field>
            <field name="prefix">CMD/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Lots -->
        <record id="seq_potting_lot" model="ir.sequence">
            <field name="name">Lot empotage</field>
            <field name="code">potting.lot</field>
            <field name="prefix">T</field>
            <field name="padding">5</field>
            <field name="number_next">10582</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Containers -->
        <record id="seq_potting_container" model="ir.sequence">
            <field name="name">Conteneur empotage</field>
            <field name="code">potting.container</field>
            <field name="prefix">CONT/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Delivery Notes -->
        <record id="seq_potting_delivery_note" model="ir.sequence">
            <field name="name">Bon de Livraison empotage</field>
            <field name="code">potting.delivery.note</field>
            <field name="prefix">BL/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- ================================================================
             CONFIRMATION DE VENTE (CV) - SÉQUENCE
             ================================================================ -->
        <record id="seq_potting_confirmation_vente" model="ir.sequence">
            <field name="name">Confirmation de Vente</field>
            <field name="code">potting.confirmation.vente</field>
            <field name="prefix">CV/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- ================================================================
             FORMULE (FO) - SÉQUENCE
             ================================================================ -->
        <record id="seq_potting_formule" model="ir.sequence">
            <field name="name">Formule</field>
            <field name="code">potting.formule</field>
            <field name="prefix">FO/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
