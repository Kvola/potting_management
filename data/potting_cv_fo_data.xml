<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ====================================================================
         DONNÉES DE RÉFÉRENCE POUR LES TAXES ET REDEVANCES CCC
         
         Ces données représentent les principales taxes et redevances
         prélevées par le Conseil Café-Cacao de Côte d'Ivoire sur les
         exportations de produits semi-finis du cacao.
         
         Basé sur le document FO1 EGY060:
         - Redevances (taux FCFA/kg): CCC, Investissement agricole, FIMR, Sacherie
         - Taxes (%): Taxe d'enregistrement, DIUS
         - Soutien/Reversement
         ==================================================================== -->
    
    <data noupdate="0">
        
        <!-- Partenaire CCC (Conseil Café-Cacao) -->
        <record id="partner_conseil_cafe_cacao" model="res.partner">
            <field name="name">Conseil du Café-Cacao (CCC)</field>
            <field name="is_company">True</field>
            <field name="company_type">company</field>
            <field name="street">Immeuble Caistab - Plateau</field>
            <field name="city">Abidjan</field>
            <field name="country_id" ref="base.ci"/>
            <field name="phone">+225 20 21 25 40</field>
            <field name="website">https://www.conseilcafecacao.ci</field>
            <field name="comment">Conseil du Café-Cacao - Organisme de régulation de la filière café-cacao en Côte d'Ivoire</field>
        </record>
        
        <!-- Partenaire DGI (Direction Générale des Impôts) -->
        <record id="partner_dgi" model="res.partner">
            <field name="name">Direction Générale des Impôts (DGI)</field>
            <field name="is_company">True</field>
            <field name="company_type">company</field>
            <field name="city">Abidjan</field>
            <field name="country_id" ref="base.ci"/>
            <field name="comment">Direction Générale des Impôts - Côte d'Ivoire</field>
        </record>
        
    </data>
    
    <!-- ====================================================================
         TYPES DE TAXES PRÉDÉFINIES CCC
         Basés sur le document FO1 EGY060
         ==================================================================== -->
    
    <data noupdate="0">
        
        <!-- ==================== REDEVANCES (taux FCFA/kg) ==================== -->
        
        <!-- Conseil du Café-Cacao (Taux 1,245 FCFA/kg) -->
        <record id="taxe_type_ccc" model="potting.taxe.type">
            <field name="name">Conseil du Café-Cacao</field>
            <field name="code">CCC</field>
            <field name="sequence">10</field>
            <field name="categorie">redevance</field>
            <field name="taux_par_kg">1.245</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Redevance versée au Conseil Café-Cacao pour le fonctionnement et la régulation de la filière. Taux: 1,245 FCFA/kg</field>
        </record>
        
        <!-- Investissement agricole (Taux 0,36 FCFA/kg) -->
        <record id="taxe_type_invest_agricole" model="potting.taxe.type">
            <field name="name">Investissement agricole</field>
            <field name="code">INVEST_AGRI</field>
            <field name="sequence">20</field>
            <field name="categorie">redevance</field>
            <field name="taux_par_kg">0.36</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Contribution pour le développement et l'investissement agricole. Taux: 0,36 FCFA/kg</field>
        </record>
        
        <!-- FIMR - Fonds d'Investissement en Milieu Rural (Taux 0,386 FCFA/kg) -->
        <record id="taxe_type_fimr" model="potting.taxe.type">
            <field name="name">FIMR</field>
            <field name="code">FIMR</field>
            <field name="sequence">30</field>
            <field name="categorie">redevance</field>
            <field name="taux_par_kg">0.386</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Fonds d'Investissement en Milieu Rural - Contribution pour le développement rural. Taux: 0,386 FCFA/kg</field>
        </record>
        
        <!-- Sacherie (Taux 0,27 FCFA/kg) -->
        <record id="taxe_type_sacherie" model="potting.taxe.type">
            <field name="name">Sacherie</field>
            <field name="code">SACHERIE</field>
            <field name="sequence">40</field>
            <field name="categorie">redevance</field>
            <field name="taux_par_kg">0.27</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Frais liés à la sacherie et à l'emballage pour l'exportation. Taux: 0,27 FCFA/kg</field>
        </record>
        
        <!-- ==================== TAXES (% du montant) ==================== -->
        
        <!-- Taxe d'enregistrement (5%) -->
        <record id="taxe_type_enregistrement" model="potting.taxe.type">
            <field name="name">Taxe d'enregistrement</field>
            <field name="code">ENREG</field>
            <field name="sequence">50</field>
            <field name="categorie">taxe</field>
            <field name="taux_pourcentage">5.0</field>
            <field name="is_preleve_default">False</field>
            <field name="description">Taxe d'enregistrement prélevée sur le montant de la transaction. Taux: 5%</field>
        </record>
        
        <!-- DIUS - Droit Indicatif Unique de Sortie (14,6%) -->
        <record id="taxe_type_dius" model="potting.taxe.type">
            <field name="name">DIUS</field>
            <field name="code">DIUS</field>
            <field name="sequence">60</field>
            <field name="categorie">taxe</field>
            <field name="taux_pourcentage">14.6</field>
            <field name="is_preleve_default">False</field>
            <field name="description">Droit Indicatif Unique de Sortie - Taxe douanière à l'exportation. Taux: 14,6%</field>
        </record>
        
        <!-- ==================== SOUTIEN/REVERSEMENT ==================== -->
        
        <!-- Soutien/Reversement producteurs -->
        <record id="taxe_type_soutien" model="potting.taxe.type">
            <field name="name">Soutien/Reversement</field>
            <field name="code">SOUTIEN</field>
            <field name="sequence">70</field>
            <field name="categorie">soutien</field>
            <field name="is_preleve_default">False</field>
            <field name="description">Montant reversé aux producteurs de cacao. Montant variable selon la formule.</field>
        </record>
        
        <!-- DUS - Droit Unique de Sortie (alternative au DIUS) -->
        <record id="taxe_type_dus" model="potting.taxe.type">
            <field name="name">DUS</field>
            <field name="code">DUS</field>
            <field name="sequence">65</field>
            <field name="categorie">taxe</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Droit Unique de Sortie - Peut être utilisé comme alternative au DIUS selon le type d'exportation.</field>
        </record>
        
        <!-- FDPCC - Fonds de Développement et de Promotion Café-Cacao -->
        <record id="taxe_type_fdpcc" model="potting.taxe.type">
            <field name="name">FDPCC</field>
            <field name="code">FDPCC</field>
            <field name="sequence">45</field>
            <field name="categorie">redevance</field>
            <field name="is_preleve_default">True</field>
            <field name="description">Fonds de Développement et de Promotion des activités des Producteurs de Café et de Cacao.</field>
        </record>
        
    </data>
</odoo>
