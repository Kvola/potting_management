<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Transit Order Report Template -->
    <template id="report_potting_transit_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport d'Ordre de Transit</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Destinataire:</strong> <t t-esc="o.consignee_id.name"/><br/>
                        <strong>Date:</strong> <t t-esc="o.date_created" t-options='{"widget": "date"}'/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/><br/>
                        <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T<br/>
                        <strong>√âtat:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <div class="row mt16">
                    <div class="col-6">
                        <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/><br/>
                        <strong>Port (POD):</strong> <t t-esc="o.pod or '-'"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Taille conteneur:</strong> <t t-esc="o.container_size"/>'<br/>
                        <strong>Booking:</strong> <t t-esc="o.booking_number or '-'"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Progression</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 t-attf-style="width: #{o.progress_percentage}%"
                                 t-att-aria-valuenow="o.progress_percentage" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <p class="mt8">
                            <strong>Lots empot√©s:</strong> <t t-esc="o.potted_lot_count"/> / <t t-esc="o.lot_count"/>
                        </p>
                    </div>
                </div>
                
                <h4 class="mt32">Liste des Lots</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N¬∞ Lot</th>
                            <th>Tonnage cible (T)</th>
                            <th>Tonnage actuel (T)</th>
                            <th>Remplissage (%)</th>
                            <th>Conteneur</th>
                            <th>Date empotage</th>
                            <th>√âtat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.lot_ids" t-as="lot">
                            <tr>
                                <td><t t-esc="lot.name"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.target_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.current_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % lot.fill_percentage"/>%</td>
                                <td><t t-esc="lot.container_id.name or '-'"/></td>
                                <td><t t-esc="lot.date_potted" t-options='{"widget": "datetime"}' t-if="lot.date_potted"/></td>
                                <td><t t-esc="dict(lot._fields['state'].selection).get(lot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td>Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('target_tonnage'))"/></td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('current_tonnage'))"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_transit_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_transit_order_document"/>
            </t>
        </t>
    </template>

    <!-- Customer Order Summary Report Template -->
    <template id="report_potting_customer_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport de synth√®se - Commande client</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Date de commande:</strong> <t t-esc="o.date_order" t-options='{"widget": "date"}'/><br/>
                        <strong>Date livraison pr√©vue:</strong> <t t-esc="o.date_expected" t-options='{"widget": "date"}' t-if="o.date_expected"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Responsable:</strong> <t t-esc="o.user_id.name"/><br/>
                        <strong>Nombre d'OT:</strong> <t t-esc="o.transit_order_count"/><br/>
                        <strong>Tonnage total:</strong> <t t-esc="o.total_tonnage"/> T<br/>
                        <strong>√âtat:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Ordres de Transit</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N¬∞ OT</th>
                            <th>Destinataire</th>
                            <th>Produit</th>
                            <th>Tonnage (T)</th>
                            <th>Navire</th>
                            <th>Port (POD)</th>
                            <th>Progression</th>
                            <th>√âtat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.transit_order_ids" t-as="ot">
                            <tr>
                                <td><t t-esc="ot.name"/></td>
                                <td><t t-esc="ot.consignee_id.name"/></td>
                                <td><t t-esc="dict(ot._fields['product_type'].selection).get(ot.product_type, '')"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % ot.tonnage"/></td>
                                <td><t t-esc="ot.vessel_name or '-'"/></td>
                                <td><t t-esc="ot.pod or '-'"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % ot.progress_percentage"/>%</td>
                                <td><t t-esc="dict(ot._fields['state'].selection).get(ot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3">Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % o.total_tonnage"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_customer_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_customer_order_document"/>
            </t>
        </t>
    </template>

    <!-- ========================================================================
         OT DAILY REPORT - Rapport quotidien OT pour le PDG (Version professionnelle)
         ======================================================================== -->
    
    <template id="report_ot_daily_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0] if docs else None"/>
            <t t-if="doc">
                <t t-set="ot_data_list" t-value="doc.get_ot_data_for_report()"/>
                <t t-set="ot_range" t-value="doc.get_ot_number_range()"/>
                <t t-set="report_stats" t-value="doc.get_report_statistics()"/>
                
                <!-- Style CSS pour √©viter les chevauchements et g√©rer la pagination -->
                <style>
                    .ot-daily-report {
                        font-family: 'Segoe UI', Arial, sans-serif;
                        font-size: 9px;
                        margin-top: 10px;
                    }
                    .ot-daily-report .report-header {
                        margin-bottom: 15px;
                        border-bottom: 3px solid #1a5f2a;
                        padding-bottom: 12px;
                    }
                    .ot-daily-report .stats-dashboard {
                        margin-bottom: 12px;
                    }
                    .ot-daily-report .legend-box {
                        margin-bottom: 10px;
                        padding: 6px 10px;
                        background-color: #fafafa;
                        border-radius: 4px;
                        border: 1px solid #e0e0e0;
                    }
                    .ot-daily-report .ot-block {
                        border-radius: 5px;
                        margin-bottom: 8px;
                        overflow: hidden;
                        page-break-inside: avoid;
                    }
                    .ot-daily-report .ot-header {
                        padding: 6px 10px;
                    }
                    .ot-daily-report .ot-table {
                        width: 100%;
                        font-size: 8px;
                        border-collapse: collapse;
                    }
                    .ot-daily-report .ot-table th {
                        padding: 4px 2px;
                        border: 1px solid #ddd;
                        font-weight: 600;
                        color: #333;
                    }
                    .ot-daily-report .ot-table td {
                        padding: 3px 2px;
                        border: 1px solid #eee;
                    }
                    .ot-daily-report .report-footer {
                        margin-top: 15px;
                        padding-top: 10px;
                        border-top: 2px solid #1a5f2a;
                    }
                    @media print {
                        .ot-block { page-break-inside: avoid; }
                    }
                </style>
                
                <div class="page ot-daily-report">
                    
                    <!-- ============ EN-T√äTE DU RAPPORT ============ -->
                    <div class="report-header">
                        <table style="width: 100%;">
                            <tr>
                                <!-- Titre du rapport -->
                                <td style="width: 65%; vertical-align: middle;">
                                    <div style="background-color: #1a5f2a; padding: 10px 20px; border-radius: 5px; display: inline-block;">
                                        <span style="color: #fff; font-size: 16px; font-weight: bold; letter-spacing: 1px;">
                                            RAPPORT QUOTIDIEN OT
                                        </span>
                                        <span style="color: #c8e6c9; font-size: 12px; margin-left: 15px;">
                                            <t t-esc="doc.report_date" t-options='{"widget": "date", "format": "EEEE dd MMMM yyyy"}'/>
                                        </span>
                                    </div>
                                </td>
                                
                                <!-- Plage des OT -->
                                <td style="width: 35%; text-align: right; vertical-align: middle;">
                                    <div style="background-color: #f5f5f5; padding: 8px 12px; border-radius: 5px; border-left: 4px solid #1a5f2a; display: inline-block;">
                                        <span style="font-size: 9px; color: #666; text-transform: uppercase;">Plage OT:</span>
                                        <span style="font-size: 12px; font-weight: bold; color: #1a5f2a; margin-left: 8px;">
                                            N¬∞ <t t-esc="ot_range.get('from', '-')"/> ‚Üí <t t-esc="ot_range.get('to', '-')"/>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <!-- ============ TABLEAU DE BORD STATISTIQUES ============ -->
                    <div class="stats-dashboard">
                        <table style="width: 100%; border-collapse: separate; border-spacing: 5px 0;">
                            <tr>
                                <!-- Total OT -->
                                <td style="width: 16%; text-align: center; background-color: #1a5f2a; padding: 8px 4px; border-radius: 5px;">
                                    <span style="color: #fff; font-size: 18px; font-weight: bold;">
                                        <t t-esc="report_stats.get('total_ot', 0)"/>
                                    </span><br/>
                                    <span style="color: #c8e6c9; font-size: 8px; text-transform: uppercase;">Total OT</span>
                                </td>
                                
                                <!-- Tonnage Total -->
                                <td style="width: 18%; text-align: center; background-color: #8B4513; padding: 8px 4px; border-radius: 5px;">
                                    <span style="color: #fff; font-size: 14px; font-weight: bold;">
                                        <t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/>
                                    </span><br/>
                                    <span style="color: #ffe4c4; font-size: 8px; text-transform: uppercase;">Tonnage (Kg)</span>
                                </td>
                                
                                <!-- Progression moyenne -->
                                <td style="width: 16%; text-align: center; background-color: #2980b9; padding: 8px 4px; border-radius: 5px;">
                                    <span style="color: #fff; font-size: 14px; font-weight: bold;">
                                        <t t-esc="'{:.1f}%'.format(report_stats.get('avg_progress', 0))"/>
                                    </span><br/>
                                    <span style="color: #bbdefb; font-size: 8px; text-transform: uppercase;">Progression Moy.</span>
                                </td>
                                
                                <!-- 100% TC (Vert) -->
                                <td style="width: 16%; text-align: center; background-color: #e8f5e9; padding: 8px 4px; border-radius: 5px; border: 2px solid #27ae60;">
                                    <span style="color: #1a5f2a; font-size: 14px; font-weight: bold;">
                                        <t t-esc="report_stats.get('in_tc_count', 0)"/>
                                    </span><br/>
                                    <span style="color: #1a5f2a; font-size: 8px;">‚óè 100% In TC</span>
                                </td>
                                
                                <!-- 100% Prod (Jaune) -->
                                <td style="width: 16%; text-align: center; background-color: #fff8e1; padding: 8px 4px; border-radius: 5px; border: 2px solid #f9a825;">
                                    <span style="color: #e65100; font-size: 14px; font-weight: bold;">
                                        <t t-esc="report_stats.get('prod_100_count', 0)"/>
                                    </span><br/>
                                    <span style="color: #e65100; font-size: 8px;">‚óè 100% Prod</span>
                                </td>
                                
                                <!-- En Production (Rouge) -->
                                <td style="width: 16%; text-align: center; background-color: #ffebee; padding: 8px 4px; border-radius: 5px; border: 2px solid #e53935;">
                                    <span style="color: #c62828; font-size: 14px; font-weight: bold;">
                                        <t t-esc="report_stats.get('in_prod_count', 0)"/>
                                    </span><br/>
                                    <span style="color: #c62828; font-size: 8px;">‚óè En Prod</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <!-- ============ L√âGENDE ============ -->
                    <div class="legend-box">
                        <table style="width: 100%; font-size: 7px;">
                            <tr>
                                <td style="width: 25%; padding: 2px 0;">
                                    <span style="display: inline-block; width: 8px; height: 8px; background-color: #27ae60; border-radius: 2px; vertical-align: middle;"></span>
                                    <span style="vertical-align: middle; margin-left: 4px; color: #333;"><strong>100% In TC</strong> - Charg√© en conteneur</span>
                                </td>
                                <td style="width: 25%; padding: 2px 0;">
                                    <span style="display: inline-block; width: 8px; height: 8px; background-color: #f9a825; border-radius: 2px; vertical-align: middle;"></span>
                                    <span style="vertical-align: middle; margin-left: 4px; color: #333;"><strong>100% Prod</strong> - Production termin√©e</span>
                                </td>
                                <td style="width: 25%; padding: 2px 0;">
                                    <span style="display: inline-block; width: 8px; height: 8px; background-color: #e53935; border-radius: 2px; vertical-align: middle;"></span>
                                    <span style="vertical-align: middle; margin-left: 4px; color: #333;"><strong>En Prod</strong> - Fabrication en cours</span>
                                </td>
                                <td style="width: 25%; text-align: right; padding: 2px 0;">
                                    <span style="color: #2980b9; font-weight: bold;">P</span><span style="color: #555;"> = Prix interm√©diaire</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <!-- ============ CONTENU DU RAPPORT - BOUCLE SUR CHAQUE OT ============ -->
                    <t t-set="lot_counter" t-value="0"/>
                    <t t-foreach="ot_data_list" t-as="ot">
                        <t t-set="border_color" t-value="'#27ae60' if ot['color_status'] == 'green' else ('#f9a825' if ot['color_status'] == 'yellow' else '#e53935')"/>
                        <t t-set="header_bg" t-value="'#1a5f2a' if ot['color_status'] == 'green' else ('#e65100' if ot['color_status'] == 'yellow' else '#c62828')"/>
                        <t t-set="bg_color" t-value="'#f1f8e9' if ot['color_status'] == 'green' else ('#fffde7' if ot['color_status'] == 'yellow' else '#fce4ec')"/>
                        
                        <!-- Bloc OT -->
                        <div class="ot-block" t-attf-style="border: 2px solid #{border_color};">
                            
                            <!-- En-t√™te OT -->
                            <div class="ot-header" t-attf-style="background-color: #{header_bg};">
                                <table style="width: 100%; color: #fff;">
                                    <tr>
                                        <td style="width: 10%;">
                                            <span style="font-size: 10px; font-weight: bold; background-color: rgba(255,255,255,0.2); padding: 2px 5px; border-radius: 3px;">
                                                OT N¬∞ <t t-esc="ot['ot_number']"/>
                                            </span>
                                        </td>
                                        <td style="width: 28%;">
                                            <span style="font-size: 9px; font-weight: bold;">
                                                <t t-esc="ot['customer_name']"/>
                                            </span>
                                            <t t-if="ot['consignee_name']">
                                                <span style="font-size: 8px; opacity: 0.9;"> / <t t-esc="ot['consignee_name']"/></span>
                                            </t>
                                        </td>
                                        <td style="width: 25%;">
                                            <span style="font-size: 10px; font-weight: bold;">
                                                <t t-esc="'{:,.0f}'.format(ot['total_kg'])"/> Kg
                                            </span>
                                            <span style="font-size: 7px; margin-left: 5px; opacity: 0.9;">
                                                (<t t-esc="'{:,}'.format(ot['total_units'])"/> <t t-esc="ot['unit_name']"/>
                                                <t t-if="ot['certification']"> - <t t-esc="ot['certification']"/></t>)
                                            </span>
                                        </td>
                                        <td style="width: 37%; text-align: right;">
                                            <span style="font-size: 8px; opacity: 0.9;">Prod:</span>
                                            <span style="font-size: 11px; font-weight: bold; margin-left: 3px; background-color: rgba(255,255,255,0.2); padding: 2px 6px; border-radius: 3px;">
                                                <t t-esc="'{:.1f}%'.format(ot['progress'])"/>
                                            </span>
                                            <span style="font-size: 8px; margin-left: 5px;">
                                                soit <strong><t t-esc="'{:,.0f}'.format(ot['current_kg'])"/> Kg</strong>
                                            </span>
                                            <t t-if="ot['is_partial_delivery']">
                                                <span style="background-color: #fff; color: #e65100; padding: 1px 5px; border-radius: 3px; font-size: 7px; margin-left: 5px; font-weight: bold;">
                                                    üöö Livr. partielle
                                                </span>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            
                            <!-- Barre de progression -->
                            <div style="height: 3px; background-color: #e0e0e0;">
                                <div t-attf-style="height: 100%; width: #{min(ot['progress'], 100)}%; background-color: #{border_color};"></div>
                            </div>
                            
                            <!-- Tableau des lots -->
                            <table class="ot-table">
                                <thead>
                                    <tr t-attf-style="background-color: #{bg_color};">
                                        <th style="width: 2.5%; text-align: center;">N¬∞</th>
                                        <th style="width: 3%; text-align: center;">Lot</th>
                                        <th style="width: 6%;">N¬∞ Lot</th>
                                        <th style="width: 7%;">Contrat</th>
                                        <th style="width: 6%;">N¬∞ BL</th>
                                        <th style="width: 5.5%;">Date BL</th>
                                        <th style="width: 9%;">N¬∞ Conteneur</th>
                                        <th style="width: 8%;">Navire</th>
                                        <th style="width: 7%;">Booking</th>
                                        <th style="width: 5.5%;">ETA</th>
                                        <th style="width: 5.5%;">ETD</th>
                                        <th style="width: 6%;">Compagnie</th>
                                        <th style="width: 7%;">Destination</th>
                                        <th style="width: 5.5%;">Empotage</th>
                                        <th style="width: 5.5%;">Fin Prod</th>
                                        <th style="width: 7%; text-align: right;">Qt√© (Kg)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="ot['lots']" t-as="lot">
                                        <t t-set="lot_counter" t-value="lot_counter + 1"/>
                                        <tr t-attf-style="background-color: #{lot_index % 2 == 0 and '#fff' or '#f9f9f9'};">
                                            <td style="text-align: center; color: #888; font-size: 7px;">
                                                <t t-esc="lot_counter"/>
                                            </td>
                                            <td style="text-align: center; font-weight: bold; color: #333;">
                                                <t t-esc="lot_index + 1"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['name']"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['contract_number']"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['bl_number']"/>
                                            </td>
                                            <td style="color: #555;">
                                                <t t-if="lot['bl_date']">
                                                    <t t-esc="lot['bl_date']" t-options='{"widget": "date", "format": "dd/MM/yy"}'/>
                                                </t>
                                            </td>
                                            <td style="font-weight: 600; color: #1a5f2a;">
                                                <t t-esc="lot['container_number']"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['vessel_name']"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['booking_number']"/>
                                            </td>
                                            <td style="color: #555;">
                                                <t t-if="lot['eta']">
                                                    <t t-esc="lot['eta']" t-options='{"widget": "date", "format": "dd/MM/yy"}'/>
                                                </t>
                                            </td>
                                            <td style="color: #555;">
                                                <t t-if="lot['etd']">
                                                    <t t-esc="lot['etd']" t-options='{"widget": "date", "format": "dd/MM/yy"}'/>
                                                </t>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['shipping_line']"/>
                                            </td>
                                            <td style="color: #333;">
                                                <t t-esc="lot['destination']"/>
                                            </td>
                                            <td style="color: #555;">
                                                <t t-if="lot['date_potted']">
                                                    <t t-esc="lot['date_potted']" t-options='{"widget": "date", "format": "dd/MM/yy"}'/>
                                                </t>
                                            </td>
                                            <td style="color: #555;">
                                                <t t-if="lot['date_production_end']">
                                                    <t t-esc="lot['date_production_end']" t-options='{"widget": "date", "format": "dd/MM/yy"}'/>
                                                </t>
                                            </td>
                                            <td style="text-align: right; font-weight: bold; color: #1a5f2a;">
                                                <t t-esc="'{:,.0f}'.format(lot['quantity_kg'])"/>
                                            </td>
