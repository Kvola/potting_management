<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Transit Order Report Template -->
    <template id="report_potting_transit_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport d'Ordre de Transit</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Destinataire:</strong> <t t-esc="o.consignee_id.name"/><br/>
                        <strong>Date:</strong> <t t-esc="o.date_created" t-options='{"widget": "date"}'/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/><br/>
                        <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <div class="row mt16">
                    <div class="col-6">
                        <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/><br/>
                        <strong>Port (POD):</strong> <t t-esc="o.pod or '-'"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Taille conteneur:</strong> <t t-esc="o.container_size"/>'<br/>
                        <strong>Booking:</strong> <t t-esc="o.booking_number or '-'"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Progression</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 t-attf-style="width: #{o.progress_percentage}%"
                                 t-att-aria-valuenow="o.progress_percentage" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <p class="mt8">
                            <strong>Lots empotés:</strong> <t t-esc="o.potted_lot_count"/> / <t t-esc="o.lot_count"/>
                        </p>
                    </div>
                </div>
                
                <h4 class="mt32">Liste des Lots</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr style="background-color: #1F4E79 !important;">
                            <th style="color: white !important;">N° Lot</th>
                            <th style="color: white !important;">Tonnage cible (T)</th>
                            <th style="color: white !important;">Tonnage actuel (T)</th>
                            <th style="color: white !important;">Remplissage (%)</th>
                            <th style="color: white !important;">Conteneur</th>
                            <th style="color: white !important;">Date empotage</th>
                            <th style="color: white !important;">État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.lot_ids" t-as="lot">
                            <tr>
                                <td><t t-esc="lot.name"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.target_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.current_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % lot.fill_percentage"/>%</td>
                                <td><t t-esc="lot.container_id.name or '-'"/></td>
                                <td><t t-esc="lot.date_potted" t-options='{"widget": "datetime"}' t-if="lot.date_potted"/></td>
                                <td><t t-esc="dict(lot._fields['state'].selection).get(lot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td>Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('target_tonnage'))"/></td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('current_tonnage'))"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_transit_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_transit_order_document"/>
            </t>
        </t>
    </template>

    <!-- Customer Order Summary Report Template -->
    <template id="report_potting_customer_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport de synthèse - Commande client</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Date de commande:</strong> <t t-esc="o.date_order" t-options='{"widget": "date"}'/><br/>
                        <strong>Date livraison prévue:</strong> <t t-esc="o.date_expected" t-options='{"widget": "date"}' t-if="o.date_expected"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Responsable:</strong> <t t-esc="o.user_id.name"/><br/>
                        <strong>Nombre d'OT:</strong> <t t-esc="o.transit_order_count"/><br/>
                        <strong>Tonnage total:</strong> <t t-esc="o.total_tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Ordres de Transit</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr style="background-color: #1F4E79;">
                            <th style="color: white !important;">N° OT</th>
                            <th style="color: white !important;">Destinataire</th>
                            <th style="color: white !important;">Produit</th>
                            <th style="color: white !important;">Tonnage (T)</th>
                            <th style="color: white !important;">Navire</th>
                            <th style="color: white !important;">Port (POD)</th>
                            <th style="color: white !important;">Progression</th>
                            <th style="color: white !important;">État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.transit_order_ids" t-as="ot">
                            <tr>
                                <td><t t-esc="ot.name"/></td>
                                <td><t t-esc="ot.consignee_id.name"/></td>
                                <td><t t-esc="dict(ot._fields['product_type'].selection).get(ot.product_type, '')"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % ot.tonnage"/></td>
                                <td><t t-esc="ot.vessel_name or '-'"/></td>
                                <td><t t-esc="ot.pod or '-'"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % ot.progress_percentage"/>%</td>
                                <td><t t-esc="dict(ot._fields['state'].selection).get(ot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3">Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % o.total_tonnage"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_customer_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_customer_order_document"/>
            </t>
        </t>
    </template>

    <!-- ========================================================================
         OT DAILY REPORT - ÉTAT OT - Style Excel professionnel
         Inspiré du format ETAT_OT 15 12 2025.pdf
         ======================================================================== -->
    
    <template id="report_ot_daily_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0] if docs else None"/>
            <t t-if="doc">
                <t t-set="ot_data_list" t-value="doc.get_ot_data_for_report()"/>
                <t t-set="ot_range" t-value="doc.get_ot_number_range()"/>
                <t t-set="report_stats" t-value="doc.get_report_statistics()"/>
                
                <style type="text/css">
                    /* Style Excel professionnel pour ETAT_OT */
                    .etat-ot-container {
                        font-family: 'Calibri', 'Arial', sans-serif;
                        font-size: 9pt;
                        color: #000;
                    }
                    .etat-ot-title {
                        font-size: 14pt;
                        font-weight: bold;
                        text-align: center;
                        color: #1F4E79;
                        margin-bottom: 12px;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                    }
                    .etat-ot-subtitle {
                        font-size: 10pt;
                        text-align: center;
                        color: #666;
                        margin-bottom: 12px;
                    }
                    /* KPI Cards style Excel */
                    .kpi-row {
                        margin-bottom: 10px;
                    }
                    .kpi-cell {
                        border: 1px solid #D0D0D0;
                        background: #F2F2F2;
                        padding: 6px 10px;
                        text-align: center;
                    }
                    .kpi-value {
                        font-size: 16pt;
                        font-weight: bold;
                        color: #1F4E79;
                    }
                    .kpi-label {
                        font-size: 8pt;
                        color: #666;
                        text-transform: uppercase;
                    }
                    .kpi-status-cell {
                        border: 1px solid #D0D0D0;
                        background: #F2F2F2;
                        padding: 6px;
                    }
                    .status-indicator {
                        display: inline-block;
                        padding: 2px 8px;
                        border-radius: 3px;
                        font-size: 8pt;
                        font-weight: bold;
                        margin: 1px 3px;
                    }
                    .status-green { background: #C6EFCE; color: #006100; }
                    .status-yellow { background: #FFEB9C; color: #9C5700; }
                    .status-red { background: #FFC7CE; color: #9C0006; }
                    .status-blue { background: #BDD7EE; color: #1F4E79; }
                    /* Tableau principal style Excel */
                    .ot-table {
                        width: 100%;
                        border-collapse: collapse;
                        font-size: 8pt;
                    }
                    .ot-table th {
                        background: #1F4E79 !important;
                        color: white !important;
                        font-weight: bold;
                        padding: 5px 3px;
                        text-align: center;
                        border: 1px solid #1F4E79;
                        font-size: 7pt;
                        text-transform: uppercase;
                    }
                    .ot-table td {
                        border: 1px solid #D0D0D0;
                        padding: 3px 4px;
                        vertical-align: middle;
                    }
                    .ot-header-row td {
                        background: #D6DCE4;
                        font-weight: bold;
                        border-bottom: 2px solid #1F4E79;
                    }
                    .lot-row td {
                        background: #FFFFFF;
                    }
                    .lot-row:nth-child(even) td {
                        background: #F8F9FA;
                    }
                    .ot-subtotal-row td {
                        background: #E2EFDA;
                        font-weight: bold;
                        border-top: 1px solid #70AD47;
                    }
                    .text-right { text-align: right; }
                    .text-center { text-align: center; }
                    .text-left { text-align: left; }
                    .cell-number { font-family: 'Consolas', monospace; }
                    .cell-container { color: #1F4E79; font-weight: 600; }
                    .progress-badge {
                        display: inline-block;
                        padding: 1px 6px;
                        border-radius: 8px;
                        font-size: 7pt;
                        font-weight: bold;
                    }
                    .progress-100-tc { background: #C6EFCE; color: #006100; }
                    .progress-100 { background: #FFEB9C; color: #9C5700; }
                    .progress-prod { background: #FFC7CE; color: #9C0006; }
                    .partial-badge { 
                        background: #FBE5D6; 
                        color: #C65911;
                        font-size: 7pt;
                        padding: 1px 4px;
                        border-radius: 3px;
                    }
                    /* Footer */
                    .report-footer {
                        margin-top: 10px;
                        padding-top: 8px;
                        border-top: 2px solid #1F4E79;
                        font-size: 8pt;
                        color: #666;
                    }
                    .grand-total {
                        background: #1F4E79;
                        color: white;
                        font-weight: bold;
                    }
                </style>
                
                <div class="page etat-ot-container">
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         EN-TÊTE - STYLE EXCEL
                         ══════════════════════════════════════════════════════════════ -->
                    <div class="etat-ot-title">
                        ÉTAT DES ORDRES DE TRANSIT (OT)
                    </div>
                    <div class="etat-ot-subtitle">
                        Date: <t t-esc="doc.report_date" t-options='{"widget": "date", "format": "dd MMMM yyyy"}'/> 
                        | OT N° <t t-esc="ot_range.get('from', '-')"/> à <t t-esc="ot_range.get('to', '-')"/>
                        | <t t-esc="report_stats.get('total_ot', 0)"/> ordres
                    </div>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         INDICATEURS CLÉS - STYLE KPI EXCEL
                         ══════════════════════════════════════════════════════════════ -->
                    <table class="kpi-row" style="width: 100%; border-collapse: collapse; margin-bottom: 10px;">
                        <tr>
                            <td class="kpi-cell" style="width: 15%;">
                                <div class="kpi-value"><t t-esc="report_stats.get('total_ot', 0)"/></div>
                                <div class="kpi-label">Total OT</div>
                            </td>
                            <td class="kpi-cell" style="width: 20%;">
                                <div class="kpi-value"><t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/></div>
                                <div class="kpi-label">Tonnage Total (Kg)</div>
                            </td>
                            <td class="kpi-cell" style="width: 15%;">
                                <div class="kpi-value"><t t-esc="'{:.0f}'.format(report_stats.get('avg_progress', 0))"/>%</div>
                                <div class="kpi-label">Progression Moy.</div>
                            </td>
                            <td class="kpi-status-cell" style="width: 50%;">
                                <span class="status-indicator status-green">
                                    ✓ In TC: <t t-esc="report_stats.get('in_tc_count', 0)"/>
                                </span>
                                <span class="status-indicator status-yellow">
                                    ● 100%: <t t-esc="report_stats.get('prod_100_count', 0)"/>
                                </span>
                                <span class="status-indicator status-red">
                                    ⏳ Prod: <t t-esc="report_stats.get('in_prod_count', 0)"/>
                                </span>
                                <span class="status-indicator status-blue">
                                    ◐ Partiel: <t t-esc="report_stats.get('partial_delivery_count', 0)"/>
                                </span>
                            </td>
                        </tr>
                    </table>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         TABLEAU PRINCIPAL - FORMAT ETAT_OT EXCEL
                         ══════════════════════════════════════════════════════════════ -->
                    <table class="ot-table">
                        <thead>
                            <tr style="background-color: #1F4E79 !important;">
                                <th style="width: 3%; background-color: #1F4E79 !important; color: white !important;">N°</th>
                                <th style="width: 6%; background-color: #1F4E79 !important; color: white !important;">OT</th>
                                <th style="width: 5%; background-color: #1F4E79 !important; color: white !important;">Lot</th>
                                <th style="width: 10%; background-color: #1F4E79 !important; color: white !important;">Client</th>
                                <th style="width: 8%; background-color: #1F4E79 !important; color: white !important;">Destinataire</th>
                                <th style="width: 7%; background-color: #1F4E79 !important; color: white !important;">N° Contrat</th>
                                <th style="width: 6%; background-color: #1F4E79 !important; color: white !important;">N° BL</th>
                                <th style="width: 10%; background-color: #1F4E79 !important; color: white !important;">Conteneur</th>
                                <th style="width: 8%; background-color: #1F4E79 !important; color: white !important;">Navire</th>
                                <th style="width: 6%; background-color: #1F4E79 !important; color: white !important;">Booking</th>
                                <th style="width: 7%; background-color: #1F4E79 !important; color: white !important;">Destination</th>
                                <th style="width: 4%; background-color: #1F4E79 !important; color: white !important;">ETA</th>
                                <th style="width: 4%; background-color: #1F4E79 !important; color: white !important;">ETD</th>
                                <th style="width: 5%; background-color: #1F4E79 !important; color: white !important;">Empot.</th>
                                <th style="width: 5%; background-color: #1F4E79 !important; color: white !important;">Fin Prod</th>
                                <th style="width: 6%; background-color: #1F4E79 !important; color: white !important;">Qté (Kg)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="row_num" t-value="0"/>
                            <t t-set="grand_total_kg" t-value="0"/>
                            
                            <t t-foreach="ot_data_list" t-as="ot">
                                <t t-set="ot_lots" t-value="ot['lots']"/>
                                <t t-set="lot_count" t-value="len(ot_lots) if ot_lots else 1"/>
                                <t t-set="progress_class" t-value="'progress-100-tc' if ot['color_status'] == 'green' else ('progress-100' if ot['color_status'] == 'yellow' else 'progress-prod')"/>
                                
                                <!-- S'il n'y a pas de lots, afficher une seule ligne pour l'OT -->
                                <t t-if="not ot_lots">
                                    <t t-set="row_num" t-value="row_num + 1"/>
                                    <tr class="ot-header-row">
                                        <td class="text-center"><t t-esc="row_num"/></td>
                                        <td class="text-left">
                                            <strong>OT-<t t-esc="ot['ot_number']"/></strong>
                                            <span t-attf-class="progress-badge #{progress_class}">
                                                <t t-esc="'{:.0f}%'.format(ot['progress'])"/>
                                            </span>
                                            <t t-if="ot['is_partial_delivery']">
                                                <span class="partial-badge">◐</span>
                                            </t>
                                        </td>
                                        <td>-</td>
                                        <td class="text-left"><t t-esc="ot['customer_name'][:15]"/></td>
                                        <td class="text-left"><t t-esc="(ot['consignee_name'] or '-')[:12]"/></td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td class="text-center">-</td>
                                        <td class="text-center">-</td>
                                        <td class="text-center">-</td>
                                        <td class="text-center">-</td>
                                        <td class="text-right cell-number"><t t-esc="'{:,.0f}'.format(ot['total_kg'])"/></td>
                                    </tr>
                                    <t t-set="grand_total_kg" t-value="grand_total_kg + ot['total_kg']"/>
                                </t>
                                
                                <!-- Si des lots existent -->
                                <t t-if="ot_lots">
                                    <t t-foreach="ot_lots" t-as="lot">
                                        <t t-set="row_num" t-value="row_num + 1"/>
                                        <t t-set="is_first_lot" t-value="lot_index == 0"/>
                                        
                                        <tr t-attf-class="#{('ot-header-row' if is_first_lot else 'lot-row')}">
                                            <td class="text-center"><t t-esc="row_num"/></td>
                                            
                                            <!-- OT Info (seulement sur la première ligne) -->
                                            <t t-if="is_first_lot">
                                                <td class="text-left">
                                                    <strong>OT-<t t-esc="ot['ot_number']"/></strong>
                                                    <span t-attf-class="progress-badge #{progress_class}">
                                                        <t t-esc="'{:.0f}%'.format(ot['progress'])"/>
                                                    </span>
                                                    <t t-if="ot['is_partial_delivery']">
                                                        <span class="partial-badge">◐</span>
                                                    </t>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td class="text-center" style="color: #999;">↳</td>
                                            </t>
                                            
                                            <td class="text-left"><t t-esc="lot['name']"/></td>
                                            
                                            <!-- Client/Destinataire (seulement sur la première ligne) -->
                                            <t t-if="is_first_lot">
                                                <td class="text-left"><t t-esc="ot['customer_name'][:15]"/></td>
                                                <td class="text-left"><t t-esc="(ot['consignee_name'] or '-')[:12]"/></td>
                                            </t>
                                            <t t-else="">
                                                <td></td>
                                                <td></td>
                                            </t>
                                            
                                            <td class="text-left"><t t-esc="lot['contract_number'] or '-'"/></td>
                                            <td class="text-left"><t t-esc="lot['bl_number'] or '-'"/></td>
                                            <td class="text-left cell-container"><t t-esc="lot['container_number'] or '-'"/></td>
                                            <td class="text-left"><t t-esc="(lot['vessel_name'] or '-')[:10]"/></td>
                                            <td class="text-left"><t t-esc="lot['booking_number'] or '-'"/></td>
                                            <td class="text-left"><t t-esc="(lot['destination'] or '-')[:10]"/></td>
                                            <td class="text-center">
                                                <t t-if="lot['eta']"><t t-esc="lot['eta']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                                <t t-else="">-</t>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="lot['etd']"><t t-esc="lot['etd']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                                <t t-else="">-</t>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="lot['date_potted']"><t t-esc="lot['date_potted']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                                <t t-else="">-</t>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="lot['date_production_end']"><t t-esc="lot['date_production_end']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                                <t t-else="">-</t>
                                            </td>
                                            <td class="text-right cell-number"><t t-esc="'{:,.0f}'.format(lot['quantity_kg'])"/></td>
                                        </tr>
                                        <t t-set="grand_total_kg" t-value="grand_total_kg + lot['quantity_kg']"/>
                                    </t>
                                    
                                    <!-- Sous-total par OT (si plus d'un lot) -->
                                    <t t-if="len(ot_lots) > 1">
                                        <tr class="ot-subtotal-row">
                                            <td colspan="15" class="text-right" style="font-size: 7pt;">
                                                Sous-total OT-<t t-esc="ot['ot_number']"/> (<t t-esc="len(ot_lots)"/> lots):
                                            </td>
                                            <td class="text-right cell-number">
                                                <t t-esc="'{:,.0f}'.format(ot['total_kg'])"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            
                            <!-- TOTAL GÉNÉRAL -->
                            <tr class="grand-total">
                                <td colspan="15" class="text-right" style="padding: 6px;">
                                    <strong>TOTAL GÉNÉRAL (<t t-esc="report_stats.get('total_ot', 0)"/> OT)</strong>
                                </td>
                                <td class="text-right cell-number" style="padding: 6px;">
                                    <strong><t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/> Kg</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         PIED DE PAGE
                         ══════════════════════════════════════════════════════════════ -->
                    <div class="report-footer">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%;">
                                    Généré le <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y à %H:%M')"/> 
                                    | Par: <t t-esc="user.name"/>
                                </td>
                                <td style="width: 50%; text-align: right;">
                                    <strong><t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0) / 1000)"/> Tonnes</strong>
                                    (<t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/> Kg)
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                </div>
            </t>
        </t>
    </template>

    <template id="report_ot_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_ot_daily_document"/>
        </t>
    </template>

    <!-- Ancien template de rapport journalier (conservé pour compatibilité) -->
    <template id="report_potting_daily_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Rapport journalier d'empotage</h2>
                <h4 class="text-center">Date: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></h4>
                
                <t t-foreach="docs" t-as="o">
                    <div class="mt32 border-bottom pb-3 mb-3">
                        <h5><t t-esc="o.name"/> - <t t-esc="o.consignee_id.name"/></h5>
                        <div class="row">
                            <div class="col-4">
                                <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/>
                            </div>
                            <div class="col-4">
                                <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T
                            </div>
                            <div class="col-4">
                                <strong>Progression:</strong> <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-4">
                                <strong>Lots:</strong> <t t-esc="o.potted_lot_count"/>/<t t-esc="o.lot_count"/>
                            </div>
                            <div class="col-4">
                                <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/>
                            </div>
                            <div class="col-4">
                                <strong>Port:</strong> <t t-esc="o.pod or '-'"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_potting_daily_document"/>
        </t>
    </template>
</odoo>
