<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Transit Order Report Template -->
    <template id="report_potting_transit_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport d'Ordre de Transit</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Destinataire:</strong> <t t-esc="o.consignee_id.name"/><br/>
                        <strong>Date:</strong> <t t-esc="o.date_created" t-options='{"widget": "date"}'/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/><br/>
                        <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <div class="row mt16">
                    <div class="col-6">
                        <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/><br/>
                        <strong>Port (POD):</strong> <t t-esc="o.pod or '-'"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Taille conteneur:</strong> <t t-esc="o.container_size"/>'<br/>
                        <strong>Booking:</strong> <t t-esc="o.booking_number or '-'"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Progression</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 t-attf-style="width: #{o.progress_percentage}%"
                                 t-att-aria-valuenow="o.progress_percentage" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <p class="mt8">
                            <strong>Lots empotés:</strong> <t t-esc="o.potted_lot_count"/> / <t t-esc="o.lot_count"/>
                        </p>
                    </div>
                </div>
                
                <h4 class="mt32">Liste des Lots</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N° Lot</th>
                            <th>Tonnage cible (T)</th>
                            <th>Tonnage actuel (T)</th>
                            <th>Remplissage (%)</th>
                            <th>Conteneur</th>
                            <th>Date empotage</th>
                            <th>État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.lot_ids" t-as="lot">
                            <tr>
                                <td><t t-esc="lot.name"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.target_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.current_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % lot.fill_percentage"/>%</td>
                                <td><t t-esc="lot.container_id.name or '-'"/></td>
                                <td><t t-esc="lot.date_potted" t-options='{"widget": "datetime"}' t-if="lot.date_potted"/></td>
                                <td><t t-esc="dict(lot._fields['state'].selection).get(lot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td>Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('target_tonnage'))"/></td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('current_tonnage'))"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_transit_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_transit_order_document"/>
            </t>
        </t>
    </template>

    <!-- Customer Order Summary Report Template -->
    <template id="report_potting_customer_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport de synthèse - Commande client</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Date de commande:</strong> <t t-esc="o.date_order" t-options='{"widget": "date"}'/><br/>
                        <strong>Date livraison prévue:</strong> <t t-esc="o.date_expected" t-options='{"widget": "date"}' t-if="o.date_expected"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Responsable:</strong> <t t-esc="o.user_id.name"/><br/>
                        <strong>Nombre d'OT:</strong> <t t-esc="o.transit_order_count"/><br/>
                        <strong>Tonnage total:</strong> <t t-esc="o.total_tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Ordres de Transit</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N° OT</th>
                            <th>Destinataire</th>
                            <th>Produit</th>
                            <th>Tonnage (T)</th>
                            <th>Navire</th>
                            <th>Port (POD)</th>
                            <th>Progression</th>
                            <th>État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.transit_order_ids" t-as="ot">
                            <tr>
                                <td><t t-esc="ot.name"/></td>
                                <td><t t-esc="ot.consignee_id.name"/></td>
                                <td><t t-esc="dict(ot._fields['product_type'].selection).get(ot.product_type, '')"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % ot.tonnage"/></td>
                                <td><t t-esc="ot.vessel_name or '-'"/></td>
                                <td><t t-esc="ot.pod or '-'"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % ot.progress_percentage"/>%</td>
                                <td><t t-esc="dict(ot._fields['state'].selection).get(ot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3">Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % o.total_tonnage"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_customer_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_customer_order_document"/>
            </t>
        </t>
    </template>

    <!-- ========================================================================
         OT DAILY REPORT - Rapport quotidien OT pour le PDG (Version sobre et élégante)
         ======================================================================== -->
    
    <template id="report_ot_daily_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0] if docs else None"/>
            <t t-if="doc">
                <t t-set="ot_data_list" t-value="doc.get_ot_data_for_report()"/>
                <t t-set="ot_range" t-value="doc.get_ot_number_range()"/>
                <t t-set="report_stats" t-value="doc.get_report_statistics()"/>
                
                <div class="page" style="font-family: 'Helvetica Neue', Arial, sans-serif; font-size: 9px; color: #333; padding-top: 5px;">
                    
                    <!-- ============ EN-TÊTE SOBRE ============ -->
                    <div style="border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-bottom: 12px;">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%;">
                                    <h2 style="margin: 0; font-size: 16px; font-weight: 600; color: #2c3e50;">
                                        Rapport Quotidien OT
                                    </h2>
                                    <span style="font-size: 11px; color: #7f8c8d;">
                                        <t t-esc="doc.report_date" t-options='{"widget": "date", "format": "EEEE dd MMMM yyyy"}'/>
                                    </span>
                                </td>
                                <td style="width: 50%; text-align: right; vertical-align: bottom;">
                                    <span style="font-size: 10px; color: #7f8c8d;">
                                        OT N° <t t-esc="ot_range.get('from', '-')"/> à <t t-esc="ot_range.get('to', '-')"/>
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <!-- ============ RÉSUMÉ ============ -->
                    <div style="margin-bottom: 15px;">
                        <table style="width: 100%; font-size: 9px;">
                            <tr>
                                <td style="width: 16%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #2c3e50;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">Total OT</span><br/>
                                    <strong style="font-size: 14px; color: #2c3e50;"><t t-esc="report_stats.get('total_ot', 0)"/></strong>
                                </td>
                                <td style="width: 1%;"></td>
                                <td style="width: 18%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #8B4513;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">Tonnage Total</span><br/>
                                    <strong style="font-size: 14px; color: #8B4513;"><t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/> Kg</strong>
                                </td>
                                <td style="width: 1%;"></td>
                                <td style="width: 16%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #3498db;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">Progression</span><br/>
                                    <strong style="font-size: 14px; color: #3498db;"><t t-esc="'{:.1f}%'.format(report_stats.get('avg_progress', 0))"/></strong>
                                </td>
                                <td style="width: 1%;"></td>
                                <td style="width: 15%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #27ae60;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">In TC</span><br/>
                                    <strong style="font-size: 14px; color: #27ae60;"><t t-esc="report_stats.get('in_tc_count', 0)"/></strong>
                                </td>
                                <td style="width: 1%;"></td>
                                <td style="width: 15%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #f39c12;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">100% Prod</span><br/>
                                    <strong style="font-size: 14px; color: #f39c12;"><t t-esc="report_stats.get('prod_100_count', 0)"/></strong>
                                </td>
                                <td style="width: 1%;"></td>
                                <td style="width: 15%; padding: 8px; background-color: #f8f9fa; border-left: 3px solid #e74c3c;">
                                    <span style="color: #7f8c8d; font-size: 8px; text-transform: uppercase;">En Prod</span><br/>
                                    <strong style="font-size: 14px; color: #e74c3c;"><t t-esc="report_stats.get('in_prod_count', 0)"/></strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <!-- ============ LISTE DES OT ============ -->
                    <t t-set="lot_counter" t-value="0"/>
                    <t t-foreach="ot_data_list" t-as="ot">
                        <t t-set="status_color" t-value="'#27ae60' if ot['color_status'] == 'green' else ('#f39c12' if ot['color_status'] == 'yellow' else '#e74c3c')"/>
                        
                        <!-- Bloc OT -->
                        <div style="margin-bottom: 10px; page-break-inside: avoid;">
                            
                            <!-- En-tête OT -->
                            <div style="background-color: #f8f9fa; padding: 6px 10px; border-left: 4px solid #2c3e50;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 8%;">
                                            <strong style="font-size: 10px; color: #2c3e50;">OT <t t-esc="ot['ot_number']"/></strong>
                                        </td>
                                        <td style="width: 25%;">
                                            <span style="font-size: 9px; color: #2c3e50; font-weight: 500;">
                                                <t t-esc="ot['customer_name']"/>
                                            </span>
                                            <t t-if="ot['consignee_name']">
                                                <span style="font-size: 8px; color: #7f8c8d;"> / <t t-esc="ot['consignee_name']"/></span>
                                            </t>
                                        </td>
                                        <td style="width: 22%;">
                                            <span style="font-size: 9px; color: #555;">
                                                <t t-esc="'{:,.0f}'.format(ot['total_kg'])"/> Kg
                                                <span style="font-size: 8px; color: #999; margin-left: 3px;">
                                                    (<t t-esc="'{:,}'.format(ot['total_units'])"/> <t t-esc="ot['unit_name']"/>)
                                                </span>
                                            </span>
                                        </td>
                                        <td style="width: 20%; text-align: center;">
                                            <!-- Barre de progression simple -->
                                            <div style="display: inline-block; width: 80px; height: 6px; background-color: #e0e0e0; border-radius: 3px; vertical-align: middle;">
                                                <div t-attf-style="width: #{min(ot['progress'], 100)}%; height: 100%; background-color: #{status_color}; border-radius: 3px;"></div>
                                            </div>
                                            <span t-attf-style="font-size: 10px; font-weight: 600; color: #{status_color}; margin-left: 5px;">
                                                <t t-esc="'{:.0f}%'.format(ot['progress'])"/>
                                            </span>
                                        </td>
                                        <td style="width: 25%; text-align: right;">
                                            <span style="font-size: 9px; color: #555;">
                                                Réalisé: <strong><t t-esc="'{:,.0f}'.format(ot['current_kg'])"/> Kg</strong>
                                            </span>
                                            <t t-if="ot['is_partial_delivery']">
                                                <span style="font-size: 7px; color: #e67e22; margin-left: 5px;">● Livr. partielle</span>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            
                            <!-- Tableau des lots -->
                            <table style="width: 100%; font-size: 8px; border-collapse: collapse; margin-top: 1px;">
                                <thead>
                                    <tr style="background-color: #fafafa;">
                                        <th style="width: 3%; padding: 4px 3px; border-bottom: 1px solid #eee; text-align: center; color: #999; font-weight: 500;">N°</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Lot</th>
                                        <th style="width: 7%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Contrat</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">BL</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Date BL</th>
                                        <th style="width: 10%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Conteneur</th>
                                        <th style="width: 9%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Navire</th>
                                        <th style="width: 7%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Booking</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">ETA</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">ETD</th>
                                        <th style="width: 7%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Compagnie</th>
                                        <th style="width: 8%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Destination</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Empotage</th>
                                        <th style="width: 6%; padding: 4px 3px; border-bottom: 1px solid #eee; color: #666; font-weight: 500;">Fin Prod</th>
                                        <th style="width: 7%; padding: 4px 3px; border-bottom: 1px solid #eee; text-align: right; color: #666; font-weight: 500;">Qté (Kg)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="ot['lots']" t-as="lot">
                                        <t t-set="lot_counter" t-value="lot_counter + 1"/>
                                        <tr>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; text-align: center; color: #bbb;">
                                                <t t-esc="lot_counter"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #333;">
                                                <t t-esc="lot['name']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['contract_number']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['bl_number']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #888;">
                                                <t t-if="lot['bl_date']"><t t-esc="lot['bl_date']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #2c3e50; font-weight: 500;">
                                                <t t-esc="lot['container_number']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['vessel_name']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['booking_number']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #888;">
                                                <t t-if="lot['eta']"><t t-esc="lot['eta']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #888;">
                                                <t t-if="lot['etd']"><t t-esc="lot['etd']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['shipping_line']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #555;">
                                                <t t-esc="lot['destination']"/>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #888;">
                                                <t t-if="lot['date_potted']"><t t-esc="lot['date_potted']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; color: #888;">
                                                <t t-if="lot['date_production_end']"><t t-esc="lot['date_production_end']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 3px; border-bottom: 1px solid #f5f5f5; text-align: right; font-weight: 600; color: #2c3e50;">
                                                <t t-esc="'{:,.0f}'.format(lot['quantity_kg'])"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                    
                    <!-- ============ PIED DE RAPPORT ============ -->
                    <div style="margin-top: 15px; padding-top: 8px; border-top: 1px solid #eee; font-size: 8px; color: #999;">
                        <table style="width: 100%;">
                            <tr>
                                <td>Généré le <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y à %H:%M')"/></td>
                                <td style="text-align: right;">
                                    <t t-esc="report_stats.get('total_ot', 0)"/> OT • <t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/> Kg
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_ot_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_ot_daily_document"/>
        </t>
    </template>

    <!-- Ancien template de rapport journalier (conservé pour compatibilité) -->
    <template id="report_potting_daily_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Rapport journalier d'empotage</h2>
                <h4 class="text-center">Date: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></h4>
                
                <t t-foreach="docs" t-as="o">
                    <div class="mt32 border-bottom pb-3 mb-3">
                        <h5><t t-esc="o.name"/> - <t t-esc="o.consignee_id.name"/></h5>
                        <div class="row">
                            <div class="col-4">
                                <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/>
                            </div>
                            <div class="col-4">
                                <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T
                            </div>
                            <div class="col-4">
                                <strong>Progression:</strong> <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-4">
                                <strong>Lots:</strong> <t t-esc="o.potted_lot_count"/>/<t t-esc="o.lot_count"/>
                            </div>
                            <div class="col-4">
                                <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/>
                            </div>
                            <div class="col-4">
                                <strong>Port:</strong> <t t-esc="o.pod or '-'"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_potting_daily_document"/>
        </t>
    </template>
</odoo>
