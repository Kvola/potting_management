<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Transit Order Report Template -->
    <template id="report_potting_transit_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport d'Ordre de Transit</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Destinataire:</strong> <t t-esc="o.consignee_id.name"/><br/>
                        <strong>Date:</strong> <t t-esc="o.date_created" t-options='{"widget": "date"}'/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/><br/>
                        <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <div class="row mt16">
                    <div class="col-6">
                        <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/><br/>
                        <strong>Port (POD):</strong> <t t-esc="o.pod or '-'"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Taille conteneur:</strong> <t t-esc="o.container_size"/>'<br/>
                        <strong>Booking:</strong> <t t-esc="o.booking_number or '-'"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Progression</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 t-attf-style="width: #{o.progress_percentage}%"
                                 t-att-aria-valuenow="o.progress_percentage" 
                                 aria-valuemin="0" aria-valuemax="100">
                                <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <p class="mt8">
                            <strong>Lots empotés:</strong> <t t-esc="o.potted_lot_count"/> / <t t-esc="o.lot_count"/>
                        </p>
                    </div>
                </div>
                
                <h4 class="mt32">Liste des Lots</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N° Lot</th>
                            <th>Tonnage cible (T)</th>
                            <th>Tonnage actuel (T)</th>
                            <th>Remplissage (%)</th>
                            <th>Conteneur</th>
                            <th>Date empotage</th>
                            <th>État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.lot_ids" t-as="lot">
                            <tr>
                                <td><t t-esc="lot.name"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.target_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % lot.current_tonnage"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % lot.fill_percentage"/>%</td>
                                <td><t t-esc="lot.container_id.name or '-'"/></td>
                                <td><t t-esc="lot.date_potted" t-options='{"widget": "datetime"}' t-if="lot.date_potted"/></td>
                                <td><t t-esc="dict(lot._fields['state'].selection).get(lot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td>Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('target_tonnage'))"/></td>
                            <td class="text-end"><t t-esc="'%.2f' % sum(o.lot_ids.mapped('current_tonnage'))"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_transit_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_transit_order_document"/>
            </t>
        </t>
    </template>

    <!-- Customer Order Summary Report Template -->
    <template id="report_potting_customer_order_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 class="text-center">Rapport de synthèse - Commande client</h2>
                <h3 class="text-center"><t t-esc="o.name"/></h3>
                
                <div class="row mt32">
                    <div class="col-6">
                        <strong>Client:</strong> <t t-esc="o.customer_id.name"/><br/>
                        <strong>Date de commande:</strong> <t t-esc="o.date_order" t-options='{"widget": "date"}'/><br/>
                        <strong>Date livraison prévue:</strong> <t t-esc="o.date_expected" t-options='{"widget": "date"}' t-if="o.date_expected"/><br/>
                    </div>
                    <div class="col-6">
                        <strong>Responsable:</strong> <t t-esc="o.user_id.name"/><br/>
                        <strong>Nombre d'OT:</strong> <t t-esc="o.transit_order_count"/><br/>
                        <strong>Tonnage total:</strong> <t t-esc="o.total_tonnage"/> T<br/>
                        <strong>État:</strong> <t t-esc="dict(o._fields['state'].selection).get(o.state, '')"/><br/>
                    </div>
                </div>
                
                <h4 class="mt32">Ordres de Transit</h4>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N° OT</th>
                            <th>Destinataire</th>
                            <th>Produit</th>
                            <th>Tonnage (T)</th>
                            <th>Navire</th>
                            <th>Port (POD)</th>
                            <th>Progression</th>
                            <th>État</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.transit_order_ids" t-as="ot">
                            <tr>
                                <td><t t-esc="ot.name"/></td>
                                <td><t t-esc="ot.consignee_id.name"/></td>
                                <td><t t-esc="dict(ot._fields['product_type'].selection).get(ot.product_type, '')"/></td>
                                <td class="text-end"><t t-esc="'%.2f' % ot.tonnage"/></td>
                                <td><t t-esc="ot.vessel_name or '-'"/></td>
                                <td><t t-esc="ot.pod or '-'"/></td>
                                <td class="text-end"><t t-esc="'%.1f' % ot.progress_percentage"/>%</td>
                                <td><t t-esc="dict(ot._fields['state'].selection).get(ot.state, '')"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3">Total</td>
                            <td class="text-end"><t t-esc="'%.2f' % o.total_tonnage"/></td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
                
                <t t-if="o.note">
                    <h4 class="mt32">Notes</h4>
                    <p><t t-esc="o.note"/></p>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_customer_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="potting_management.report_potting_customer_order_document"/>
            </t>
        </t>
    </template>

    <!-- ========================================================================
         OT DAILY REPORT - Rapport quotidien OT pour le PDG
         Design moderne et élégant
         ======================================================================== -->
    
    <template id="report_ot_daily_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0] if docs else None"/>
            <t t-if="doc">
                <t t-set="ot_data_list" t-value="doc.get_ot_data_for_report()"/>
                <t t-set="ot_range" t-value="doc.get_ot_number_range()"/>
                <t t-set="report_stats" t-value="doc.get_report_statistics()"/>
                
                <div class="page" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; padding: 0; color: #1a1a1a;">
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         EN-TÊTE DU RAPPORT
                         ══════════════════════════════════════════════════════════════ -->
                    <table style="width: 100%; margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
                        <tr>
                            <td style="vertical-align: middle;">
                                <div style="font-size: 16px; font-weight: 600; color: #0d5c2f; letter-spacing: 0.5px;">
                                    Rapport de Production
                                </div>
                                <div style="font-size: 10px; color: #888; margin-top: 2px;">
                                    Suivi quotidien des Ordres de Transit
                                </div>
                            </td>
                            <td style="text-align: right; vertical-align: middle;">
                                <div style="font-size: 20px; font-weight: 300; color: #333;">
                                    <t t-esc="doc.report_date" t-options='{"widget": "date", "format": "dd MMMM yyyy"}'/>
                                </div>
                                <div style="font-size: 10px; color: #999; margin-top: 3px; text-transform: uppercase; letter-spacing: 1px;">
                                    OT <t t-esc="ot_range.get('from', '-')"/> — <t t-esc="ot_range.get('to', '-')"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         INDICATEURS CLÉS
                         ══════════════════════════════════════════════════════════════ -->
                    <table style="width: 100%; margin-bottom: 20px; border-collapse: separate; border-spacing: 8px 0;">
                        <tr>
                            <td style="width: 20%; background: #f7f7f7; padding: 12px; border-radius: 5px; text-align: center;">
                                <div style="font-size: 24px; font-weight: 600; color: #0d5c2f;">
                                    <t t-esc="report_stats.get('total_ot', 0)"/>
                                </div>
                                <div style="font-size: 9px; color: #666; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
                                    Ordres de Transit
                                </div>
                            </td>
                            <td style="width: 25%; background: #f7f7f7; padding: 12px; border-radius: 5px; text-align: center;">
                                <div style="font-size: 24px; font-weight: 600; color: #8B4513;">
                                    <t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/>
                                </div>
                                <div style="font-size: 9px; color: #666; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
                                    Kilogrammes
                                </div>
                            </td>
                            <td style="width: 20%; background: #f7f7f7; padding: 12px; border-radius: 5px; text-align: center;">
                                <div style="font-size: 24px; font-weight: 600; color: #2980b9;">
                                    <t t-esc="'{:.0f}'.format(report_stats.get('avg_progress', 0))"/><span style="font-size: 14px;">%</span>
                                </div>
                                <div style="font-size: 9px; color: #666; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
                                    Progression
                                </div>
                            </td>
                            <td style="width: 35%; background: #f7f7f7; padding: 12px 15px; border-radius: 5px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="text-align: center; border-right: 1px solid #e0e0e0;">
                                            <div style="font-size: 20px; font-weight: 600; color: #27ae60;"><t t-esc="report_stats.get('in_tc_count', 0)"/></div>
                                            <div style="font-size: 14px; color: #27ae60; text-transform: uppercase;">In TC</div>
                                        </td>
                                        <td style="text-align: center; border-right: 1px solid #e0e0e0;">
                                            <div style="font-size: 20px; font-weight: 600; color: #f39c12;"><t t-esc="report_stats.get('prod_100_count', 0)"/></div>
                                            <div style="font-size: 14px; color: #f39c12; text-transform: uppercase;">Prêt</div>
                                        </td>
                                        <td style="text-align: center;">
                                            <div style="font-size: 20px; font-weight: 600; color: #e74c3c;"><t t-esc="report_stats.get('in_prod_count', 0)"/></div>
                                            <div style="font-size: 14px; color: #e74c3c; text-transform: uppercase;">En cours</div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         TABLEAU PRINCIPAL
                         ══════════════════════════════════════════════════════════════ -->
                    <t t-set="lot_counter" t-value="0"/>
                    <t t-foreach="ot_data_list" t-as="ot">
                        <t t-set="status_color" t-value="'#27ae60' if ot['color_status'] == 'green' else ('#f39c12' if ot['color_status'] == 'yellow' else '#e74c3c')"/>
                        
                        <div style="margin-bottom: 15px; page-break-inside: avoid;">
                            <!-- Titre OT -->
                            <table style="width: 100%; margin-bottom: 5px; font-size: 12px;">
                                <tr>
                                    <td style="width: 50%;">
                                        <span style="font-weight: 600; color: #1a1a1a;">
                                            OT-<t t-esc="ot['ot_number']"/>
                                        </span>
                                        <span style="color: #555; margin-left: 8px;">
                                            <t t-esc="ot['customer_name']"/>
                                            <t t-if="ot['consignee_name']">
                                                <span style="color: #999;"> → </span><t t-esc="ot['consignee_name']"/>
                                            </t>
                                        </span>
                                    </td>
                                    <td style="width: 50%; text-align: right;">
                                        <span style="color: #555;">
                                            <t t-esc="'{:,.0f}'.format(ot['total_kg'])"/> kg
                                        </span>
                                        <!-- Badge de progression -->
                                        <span t-attf-style="display: inline-block; margin-left: 12px; padding: 2px 10px; border-radius: 10px; font-weight: 600; color: white; background-color: #{status_color};">
                                            <t t-esc="'{:.0f}%'.format(ot['progress'])"/>
                                        </span>
                                        <t t-if="ot['is_partial_delivery']">
                                            <span style="color: #e67e22; margin-left: 6px;">◐ Partiel</span>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                            
                            <!-- Tableau des lots -->
                            <table style="width: 100%; font-size: 14px; border-collapse: collapse;">
                                <thead>
                                    <tr style="background-color: #fafafa; border-top: 2px solid #eee; border-bottom: 1px solid #eee;">
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 5%;">Lot</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 7%;">Contrat</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 6%;">BL</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 11%;">Conteneur</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 10%;">Navire</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 8%;">Booking</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 8%;">Compagnie</th>
                                        <th style="padding: 8px 5px; text-align: left; font-weight: 500; color: #777; width: 9%;">Destination</th>
                                        <th style="padding: 8px 5px; text-align: center; font-weight: 500; color: #777; width: 6%;">ETA</th>
                                        <th style="padding: 8px 5px; text-align: center; font-weight: 500; color: #777; width: 6%;">ETD</th>
                                        <th style="padding: 8px 5px; text-align: center; font-weight: 500; color: #777; width: 7%;">Empotage</th>
                                        <th style="padding: 8px 5px; text-align: center; font-weight: 500; color: #777; width: 7%;">Fin Prod</th>
                                        <th style="padding: 8px 5px; text-align: right; font-weight: 500; color: #777; width: 10%;">Quantité</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="ot['lots']" t-as="lot">
                                        <t t-set="lot_counter" t-value="lot_counter + 1"/>
                                        <tr style="border-bottom: 1px solid #f0f0f0;">
                                            <td style="padding: 7px 5px; color: #333; font-weight: 500;">
                                                <t t-esc="lot['name']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['contract_number']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['bl_number']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #0d5c2f; font-weight: 500;">
                                                <t t-esc="lot['container_number']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['vessel_name']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['booking_number']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['shipping_line']"/>
                                            </td>
                                            <td style="padding: 7px 5px; color: #555;">
                                                <t t-esc="lot['destination']"/>
                                            </td>
                                            <td style="padding: 7px 5px; text-align: center; color: #888;">
                                                <t t-if="lot['eta']"><t t-esc="lot['eta']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 7px 5px; text-align: center; color: #888;">
                                                <t t-if="lot['etd']"><t t-esc="lot['etd']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 7px 5px; text-align: center; color: #888;">
                                                <t t-if="lot['date_potted']"><t t-esc="lot['date_potted']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 7px 5px; text-align: center; color: #888;">
                                                <t t-if="lot['date_production_end']"><t t-esc="lot['date_production_end']" t-options='{"widget": "date", "format": "dd/MM"}'/></t>
                                            </td>
                                            <td style="padding: 7px 5px; text-align: right; color: #1a1a1a; font-weight: 600;">
                                                <t t-esc="'{:,.0f}'.format(lot['quantity_kg'])"/> kg
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                    
                    <!-- ══════════════════════════════════════════════════════════════
                         RÉSUMÉ
                         ══════════════════════════════════════════════════════════════ -->
                    <div style="margin-top: 20px; padding-top: 12px; border-top: 1px solid #eee;">
                        <table style="width: 100%; font-size: 9px; color: #999;">
                            <tr>
                                <td>
                                    Généré le <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y à %H:%M')"/>
                                </td>
                                <td style="text-align: right;">
                                    <strong style="color: #555;"><t t-esc="report_stats.get('total_ot', 0)"/></strong> OT · 
                                    <strong style="color: #555;"><t t-esc="'{:,.0f}'.format(report_stats.get('total_tonnage_kg', 0))"/></strong> kg
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                </div>
            </t>
        </t>
    </template>

    <template id="report_ot_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_ot_daily_document"/>
        </t>
    </template>

    <!-- Ancien template de rapport journalier (conservé pour compatibilité) -->
    <template id="report_potting_daily_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Rapport journalier d'empotage</h2>
                <h4 class="text-center">Date: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></h4>
                
                <t t-foreach="docs" t-as="o">
                    <div class="mt32 border-bottom pb-3 mb-3">
                        <h5><t t-esc="o.name"/> - <t t-esc="o.consignee_id.name"/></h5>
                        <div class="row">
                            <div class="col-4">
                                <strong>Produit:</strong> <t t-esc="dict(o._fields['product_type'].selection).get(o.product_type, '')"/>
                            </div>
                            <div class="col-4">
                                <strong>Tonnage:</strong> <t t-esc="o.tonnage"/> T
                            </div>
                            <div class="col-4">
                                <strong>Progression:</strong> <t t-esc="'%.1f' % o.progress_percentage"/>%
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-4">
                                <strong>Lots:</strong> <t t-esc="o.potted_lot_count"/>/<t t-esc="o.lot_count"/>
                            </div>
                            <div class="col-4">
                                <strong>Navire:</strong> <t t-esc="o.vessel_name or '-'"/>
                            </div>
                            <div class="col-4">
                                <strong>Port:</strong> <t t-esc="o.pod or '-'"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_potting_daily">
        <t t-call="web.html_container">
            <t t-call="potting_management.report_potting_daily_document"/>
        </t>
    </template>
</odoo>
