<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="potting_create_ot_wizard_view_form" model="ir.ui.view">
        <field name="name">potting.create.ot.wizard.form</field>
        <field name="model">potting.create.ot.wizard</field>
        <field name="arch" type="xml">
            <form string="Cr√©er un Ordre de Transit">
                <sheet>
                    <div class="oe_title mb-3">
                        <h2>
                            <i class="fa fa-truck me-2 text-primary"/>
                            <span>Nouvel Ordre de Transit</span>
                        </h2>
                        <div class="text-muted mt-2">
                            <span>Commande: </span>
                            <field name="customer_order_id" readonly="1" class="oe_inline fw-bold"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="üì¶ Informations principales">
                            <field name="company_id" invisible="1"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="campaign_id" 
                                   options="{'no_create': True}"
                                   domain="[('state', 'in', ['draft', 'active'])]"
                                   required="1"/>
                            <field name="consignee_id" 
                                   placeholder="S√©lectionner un destinataire..."
                                   domain="[('is_potting_consignee', '=', True)]"
                                   context="{'default_is_potting_consignee': True}"
                                   options="{'no_quick_create': True}"/>
                            <field name="product_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="product_id" 
                                   placeholder="Produit sp√©cifique (optionnel)"
                                   invisible="not product_type"
                                   options="{'no_create': True}"/>
                            <field name="tonnage" class="fw-bold text-primary"/>
                        </group>
                        <group string="üö¢ Transport">
                            <field name="vessel_id" 
                                   placeholder="S√©lectionner un navire..."
                                   options="{'no_create_edit': True}"/>
                            <field name="pod" placeholder="Ex: HAMBURG, ROTTERDAM..."/>
                            <field name="container_size" widget="radio" options="{'horizontal': true}"/>
                            <field name="booking_number" placeholder="Ex: BK123456"/>
                        </group>
                    </group>
                    
                    <separator string="üìù Notes"/>
                    <field name="note" nolabel="1" placeholder="Notes ou instructions particuli√®res..." widget="text"/>
                </sheet>
                
                <footer>
                    <button name="action_create_ot" 
                            type="object" 
                            string="‚úÖ Cr√©er l'OT" 
                            class="btn-primary"/>
                    <button name="action_create_and_new" 
                            type="object" 
                            string="‚ûï Cr√©er et Nouveau" 
                            class="btn-secondary"
                            title="Cr√©er cet OT et ouvrir un nouveau formulaire pour en cr√©er un autre"/>
                    <button name="action_view_ot" 
                            type="object" 
                            string="üëÅ Cr√©er et Voir" 
                            class="btn-secondary"
                            title="Cr√©er cet OT et ouvrir sa fiche"/>
                    <button string="Annuler" class="btn-light" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_potting_create_ot_wizard" model="ir.actions.act_window">
        <field name="name">Cr√©er un OT</field>
        <field name="res_model">potting.create.ot.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_potting_customer_order"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
