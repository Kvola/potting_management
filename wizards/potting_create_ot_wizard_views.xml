<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="potting_create_ot_wizard_view_form" model="ir.ui.view">
        <field name="name">potting.create.ot.wizard.form</field>
        <field name="model">potting.create.ot.wizard</field>
        <field name="arch" type="xml">
            <form string="Cr√©er un Ordre de Transit">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span class="text-primary">Nouvel Ordre de Transit</span>
                        </h1>
                        <h3 class="text-muted">
                            <span>Pour la commande: </span>
                            <field name="customer_order_id" readonly="1" class="oe_inline"/>
                            <span> - Campagne: </span>
                            <field name="campaign_period" readonly="1" class="oe_inline fw-bold"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="üì¶ Informations principales">
                            <field name="company_id" invisible="1"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="consignee_id" 
                                   placeholder="S√©lectionner un destinataire..."
                                   options="{'no_create': False, 'no_quick_create': True}"/>
                            <field name="product_type"/>
                            <field name="product_id" 
                                   placeholder="Produit sp√©cifique (optionnel)"
                                   invisible="not product_type"/>
                            <field name="tonnage" class="fw-bold"/>
                        </group>
                        <group string="üö¢ Transport">
                            <field name="vessel_id" 
                                   placeholder="S√©lectionner un navire..."
                                   options="{'no_create_edit': True}"/>
                            <field name="pod" placeholder="Ex: HAMBURG"/>
                            <field name="container_size"/>
                            <field name="booking_number" placeholder="Ex: BK123456"/>
                        </group>
                    </group>
                    
                    <separator string="üìù Notes"/>
                    <field name="note" nolabel="1" placeholder="Notes ou instructions particuli√®res..."/>
                </sheet>
                
                <footer>
                    <button name="action_create_ot" 
                            type="object" 
                            string="‚úÖ Cr√©er l'OT" 
                            class="btn-primary"/>
                    <button name="action_create_and_new" 
                            type="object" 
                            string="Cr√©er et Nouveau" 
                            class="btn-secondary"
                            title="Cr√©er cet OT et ouvrir un nouveau formulaire pour en cr√©er un autre"/>
                    <button name="action_view_ot" 
                            type="object" 
                            string="Cr√©er et Voir" 
                            class="btn-secondary"
                            title="Cr√©er cet OT et ouvrir sa fiche"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_potting_create_ot_wizard" model="ir.actions.act_window">
        <field name="name">Cr√©er un OT</field>
        <field name="res_model">potting.create.ot.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_potting_customer_order"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
