<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =====================================================================
         WIZARD REJET FACTURE TRANSITAIRE
         Dialogue permettant au comptable de rejeter une facture avec motif
         ===================================================================== -->
    
    <!-- Form View -->
    <record id="potting_forwarding_invoice_reject_wizard_form" model="ir.ui.view">
        <field name="name">potting.forwarding.invoice.reject.wizard.form</field>
        <field name="model">potting.forwarding.invoice.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejeter la Facture">
                <group>
                    <group string="Informations Facture">
                        <field name="invoice_id" invisible="1"/>
                        <field name="invoice_number"/>
                        <field name="forwarding_agent_id"/>
                        <field name="amount_total"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
                <group>
                    <field name="reject_reason" placeholder="Expliquez la raison du rejet..."/>
                </group>
                <footer>
                    <button name="action_reject" string="Rejeter" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_potting_forwarding_invoice_reject_wizard" model="ir.actions.act_window">
        <field name="name">Rejeter la Facture</field>
        <field name="res_model">potting.forwarding.invoice.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
