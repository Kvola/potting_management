<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_lot_view_tree" model="ir.ui.view">
        <field name="name">potting.lot.tree</field>
        <field name="model">potting.lot</field>
        <field name="arch" type="xml">
            <tree string="Lots" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_production'" 
                  decoration-primary="state == 'ready'" 
                  decoration-success="state == 'potted'"
                  multi_edit="1"
                  sample="1">
                <field name="company_id" column_invisible="1"/>
                <field name="display_name_with_premium" string="N¬∞ Lot" decoration-bf="1"/>
                <field name="name" column_invisible="1"/>
                <field name="has_premium" column_invisible="1"/>
                <field name="premium_amount" string="Prime" optional="show" decoration-success="has_premium"/>
                <field name="transit_order_id" optional="show"/>
                <field name="customer_id" optional="show"/>
                <field name="consignee_id" optional="show"/>
                <field name="product_type" widget="badge"
                       decoration-info="product_type == 'cocoa_mass'"
                       decoration-warning="product_type == 'cocoa_butter'"
                       decoration-success="product_type == 'cocoa_cake'"
                       decoration-primary="product_type == 'cocoa_powder'"/>
                <field name="target_tonnage" decoration-bf="1"/>
                <field name="current_tonnage" decoration-bf="1" class="text-primary"/>
                <field name="remaining_tonnage" optional="show"/>
                <!-- Colonnes de conditionnement -->
                <field name="packaging_unit_name" string="Unit√©" optional="show"/>
                <field name="target_units" string="Unit√©s cibles" optional="show"/>
                <field name="current_units" string="Unit√©s prod." decoration-bf="1" class="text-success"/>
                <field name="remaining_units" string="Unit√©s rest." optional="show"/>
                <field name="fill_percentage" widget="progressbar"/>
                <field name="is_full" widget="boolean_toggle"/>
                <field name="container_id" optional="show"/>
                <field name="date_potted" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'in_production'" 
                       decoration-primary="state == 'ready'" 
                       decoration-success="state == 'potted'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_lot_view_form" model="ir.ui.view">
        <field name="name">potting.lot.form</field>
        <field name="model">potting.lot</field>
        <field name="arch" type="xml">
            <form string="Lot">
                <header>
                    <button name="action_start_production" type="object" string="D√©marrer production" invisible="state != 'draft'" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_mark_ready" type="object" string="Pr√™t pour empotage" invisible="state != 'in_production' or not is_full" class="btn-primary" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_force_ready" type="object" string="Forcer pr√™t" invisible="state != 'in_production' or is_full" groups="potting_management.group_potting_manager" confirm="Forcer ce lot comme pr√™t alors qu'il n'est pas plein ?"/>
                    <button name="action_pot" type="object" string="Empoter" invisible="state != 'ready'" class="btn-success" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon" invisible="state in ('draft', 'potted')" groups="potting_management.group_potting_manager" confirm="√ätes-vous s√ªr de vouloir remettre ce lot en brouillon ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_production,ready,potted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_productions" type="object" class="oe_stat_button" icon="fa-industry">
                            <field name="production_line_ids" widget="statinfo" string="Productions"/>
                        </button>
                        <button name="action_view_transit_order" type="object" class="oe_stat_button" icon="fa-truck">
                            <span class="o_stat_text">Ordre Transit</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Empot√©" bg_color="bg-success" invisible="state != 'potted'"/>
                    <widget name="web_ribbon" title="Plein" bg_color="bg-info" invisible="not is_full or state == 'potted'"/>
                    <div class="oe_title">
                        <label for="name" string="Num√©ro de lot"/>
                        <h1>
                            <field name="name" class="text-primary" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üìã Informations g√©n√©rales">
                            <field name="company_id" invisible="1"/>
                            <field name="transit_order_id" options="{'no_create': True}"/>
                            <field name="customer_order_id" options="{'no_create': True}"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="consignee_id" options="{'no_create': True}"/>
                        </group>
                        <group string="üì¶ Produit">
                            <field name="product_type" widget="badge"/>
                            <field name="product_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="‚öñÔ∏è Tonnage">
                            <field name="target_tonnage" widget="float" class="fw-bold"/>
                            <field name="current_tonnage" widget="float" class="fw-bold text-primary"/>
                            <field name="remaining_tonnage" widget="float" class="text-warning"/>
                            <label for="fill_percentage" string="Remplissage"/>
                            <div class="d-flex align-items-center gap-2">
                                <field name="fill_percentage" widget="progressbar" options="{'editable': false}" class="flex-grow-1"/>
                            </div>
                            <field name="is_full" widget="boolean_toggle"/>
                        </group>
                        <group string="üì¶ Conditionnement">
                            <field name="packaging_unit_name" readonly="1"/>
                            <field name="packaging_unit_weight_kg" readonly="1" string="Poids unitaire (kg)"/>
                            <field name="target_units" readonly="1" class="fw-bold"/>
                            <field name="current_units" readonly="1" class="fw-bold text-success"/>
                            <field name="remaining_units" readonly="1" class="text-warning"/>
                            <field name="packaging_display" readonly="1" class="fw-bold text-info" string="R√©sum√©"/>
                        </group>
                    </group>
                    <group>
                        <group string="üì§ Empotage">
                            <field name="container_id" options="{'no_create': True}"/>
                            <field name="date_potted"/>
                            <field name="quality_check" widget="boolean_toggle"/>
                            <field name="quality_note" widget="text" invisible="not quality_check" placeholder="Notes qualit√©..."/>
                        </group>
                        <group string="üí∞ Prime">
                            <field name="currency_id" invisible="1"/>
                            <field name="premium_amount" widget="monetary"/>
                            <field name="has_premium" widget="boolean_toggle" readonly="1"/>
                            <field name="display_name_with_premium" string="R√©f√©rence avec prime" readonly="1" class="fw-bold text-success" invisible="not has_premium"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Productions" name="productions">
                            <div class="alert alert-info" role="alert">
                                <strong>üí° Saisie des productions :</strong> Entrez le nombre de <field name="packaging_unit_name" readonly="1" class="fw-bold"/> produits. Le tonnage est calcul√© automatiquement (<field name="packaging_unit_weight_kg" readonly="1"/> kg par unit√©).
                            </div>
                            <field name="production_line_ids">
                                <tree string="Productions" editable="bottom">
                                    <field name="date"/>
                                    <field name="packaging_unit_name" string="Type" readonly="1" column_invisible="1"/>
                                    <field name="packaging_unit_weight" column_invisible="1"/>
                                    <field name="units_produced" string="Nb unit√©s" class="fw-bold text-primary"/>
                                    <field name="tonnage" string="Tonnage (T)" readonly="1" sum="Total" class="text-success"/>
                                    <field name="tonnage_kg" string="Poids (kg)" readonly="1" optional="show"/>
                                    <field name="batch_number"/>
                                    <field name="shift"/>
                                    <field name="operator_id"/>
                                    <field name="quality_ok" widget="boolean_toggle" optional="show"/>
                                    <field name="note" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_lot_view_kanban" model="ir.ui.view">
        <field name="name">potting.lot.kanban</field>
        <field name="model">potting.lot</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="display_name_with_premium"/>
                <field name="has_premium"/>
                <field name="premium_amount"/>
                <field name="transit_order_id"/>
                <field name="product_type"/>
                <field name="target_tonnage"/>
                <field name="current_tonnage"/>
                <field name="fill_percentage"/>
                <field name="is_full"/>
                <field name="container_id"/>
                <field name="state"/>
                <field name="packaging_unit_name"/>
                <field name="current_units"/>
                <field name="target_units"/>
                <progressbar field="state" colors='{"draft": "secondary", "in_production": "warning", "ready": "info", "potted": "success"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{record.is_full.raw_value ? 'border-start border-4 border-success' : ''} #{record.has_premium.raw_value ? 'border-top border-3 border-warning' : ''}">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5">
                                        <i class="fa fa-cube me-1 text-primary"/> <field name="display_name_with_premium"/>
                                        <span t-if="record.has_premium.raw_value" class="badge bg-warning text-dark ms-1" title="Prime"><i class="fa fa-star"/></span>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'in_production': 'warning', 'ready': 'info', 'potted': 'success'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1 text-muted"><i class="fa fa-truck me-1"/> <field name="transit_order_id"/></div>
                                <div class="mb-1"><i class="fa fa-cube me-1 text-muted"/> <field name="product_type"/></div>
                                <div class="mt-2 d-flex gap-2 flex-wrap align-items-center">
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="fa fa-balance-scale me-1"/>
                                        <t t-out="record.current_tonnage.raw_value"/>/<t t-out="record.target_tonnage.raw_value"/> T
                                    </span>
                                    <span class="badge bg-info rounded-pill" t-if="record.current_units.raw_value > 0">
                                        <i class="fa fa-archive me-1"/>
                                        <t t-out="record.current_units.raw_value"/>/<t t-out="record.target_units.raw_value"/> <t t-out="record.packaging_unit_name.value"/>
                                    </span>
                                    <span t-if="record.is_full.raw_value" class="badge bg-success rounded-pill">
                                        <i class="fa fa-check-circle me-1"/>Plein
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <field name="fill_percentage" widget="progressbar" options="{'editable': false}"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2" t-if="record.container_id.value">
                                <div class="oe_kanban_bottom_left text-muted small">
                                    <i class="fa fa-archive"/> <field name="container_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_lot_view_search" model="ir.ui.view">
        <field name="name">potting.lot.search</field>
        <field name="model">potting.lot</field>
        <field name="arch" type="xml">
            <search string="Rechercher lots">
                <field name="name"/>
                <field name="transit_order_id"/>
                <field name="customer_id"/>
                <field name="consignee_id"/>
                <field name="container_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="En production" name="in_production" domain="[('state', '=', 'in_production')]"/>
                <filter string="Pr√™t pour empotage" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Empot√©" name="potted" domain="[('state', '=', 'potted')]"/>
                <separator/>
                <filter string="Capacit√© atteinte" name="full" domain="[('is_full', '=', True)]"/>
                <filter string="En cours de remplissage" name="not_full" domain="[('is_full', '=', False), ('state', '=', 'in_production')]"/>
                <separator/>
                <filter string="Avec prime" name="with_premium" domain="[('has_premium', '=', True)]"/>
                <filter string="Sans prime" name="without_premium" domain="[('has_premium', '=', False)]"/>
                <separator/>
                <filter string="Masse de cacao" name="cocoa_mass" domain="[('product_type', '=', 'cocoa_mass')]"/>
                <filter string="Beurre de cacao" name="cocoa_butter" domain="[('product_type', '=', 'cocoa_butter')]"/>
                <filter string="Cake de cacao" name="cocoa_cake" domain="[('product_type', '=', 'cocoa_cake')]"/>
                <filter string="Poudre de cacao" name="cocoa_powder" domain="[('product_type', '=', 'cocoa_powder')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="OT" name="transit_order" context="{'group_by': 'transit_order_id'}"/>
                    <filter string="Client" name="customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Type de produit" name="product_type" context="{'group_by': 'product_type'}"/>
                    <filter string="Conteneur" name="container" context="{'group_by': 'container_id'}"/>
                    <filter string="√âtat" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_potting_lot" model="ir.actions.act_window">
        <field name="name">Lots</field>
        <field name="res_model">potting.lot</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun lot cr√©√©
            </p>
            <p>
                Les lots sont g√©n√©r√©s automatiquement √† partir des Ordres de Transit.
            </p>
        </field>
    </record>

    <!-- Action for CEO Agent - Lots to manage -->
    <record id="action_potting_lot_ceo_agent" model="ir.actions.act_window">
        <field name="name">Lots - Gestion production</field>
        <field name="res_model">potting.lot</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_in_production': 1, 'search_default_ready': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun lot en cours
            </p>
            <p>
                Les lots en production ou pr√™ts pour empotage appara√Ætront ici.
            </p>
        </field>
    </record>

    <!-- Production Line Views -->
    <record id="potting_production_line_view_tree" model="ir.ui.view">
        <field name="name">potting.production.line.tree</field>
        <field name="model">potting.production.line</field>
        <field name="arch" type="xml">
            <tree string="Lignes de production" editable="bottom">
                <field name="company_id" column_invisible="1"/>
                <field name="packaging_unit_weight" column_invisible="1"/>
                <field name="date"/>
                <field name="lot_id"/>
                <field name="transit_order_id" optional="show"/>
                <field name="packaging_unit_name" string="Type d'unit√©" readonly="1"/>
                <field name="units_produced" string="Nb unit√©s" class="fw-bold text-primary"/>
                <field name="tonnage" string="Tonnage (T)" readonly="1" sum="Total" class="text-success"/>
                <field name="tonnage_kg" string="Poids (kg)" readonly="1" optional="show"/>
                <field name="units_display" string="R√©sum√©" readonly="1" optional="show"/>
                <field name="batch_number"/>
                <field name="shift"/>
                <field name="operator_id"/>
                <field name="quality_ok" widget="boolean_toggle" optional="show"/>
                <field name="note" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="potting_production_line_view_search" model="ir.ui.view">
        <field name="name">potting.production.line.search</field>
        <field name="model">potting.production.line</field>
        <field name="arch" type="xml">
            <search string="Rechercher productions">
                <field name="lot_id"/>
                <field name="transit_order_id"/>
                <field name="batch_number"/>
                <field name="operator_id"/>
                <filter string="Aujourd'hui" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week" domain="[('date', '&gt;=', (context_today() - relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Lot" name="lot" context="{'group_by': 'lot_id'}"/>
                    <filter string="OT" name="transit_order" context="{'group_by': 'transit_order_id'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date:day'}"/>
                    <filter string="√âquipe" name="shift" context="{'group_by': 'shift'}"/>
                    <filter string="Op√©rateur" name="operator" context="{'group_by': 'operator_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_potting_production_line" model="ir.actions.act_window">
        <field name="name">Productions</field>
        <field name="res_model">potting.production.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>
