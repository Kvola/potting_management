<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_certification_view_tree" model="ir.ui.view">
        <field name="name">potting.certification.tree</field>
        <field name="model">potting.certification</field>
        <field name="arch" type="xml">
            <tree string="Certifications" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" decoration-bf="1"/>
                <field name="suffix" decoration-bf="1" class="text-primary"/>
                <field name="price_type" optional="show"/>
                <field name="currency_id" optional="show"/>
                <field name="price_per_ton" optional="show"/>
                <field name="price_percentage" optional="show"/>
                <field name="description" optional="hide"/>
                <field name="lot_count" string="Lots"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_certification_view_form" model="ir.ui.view">
        <field name="name">potting.certification.form</field>
        <field name="model">potting.certification</field>
        <field name="arch" type="xml">
            <form string="Certification">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Utiliser une m√©thode Python au lieu d'une action directe -->
                        <button name="action_view_lots" type="object" class="oe_stat_button" icon="fa-cube">
                            <field name="lot_count" widget="statinfo" string="Lots"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archiv√©" bg_color="bg-danger" invisible="active"/>
                    <field name="logo" widget="image" class="oe_avatar" options="{'preview_image': 'logo'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom de la certification"/>
                        </h1>
                        <h3 class="text-muted">
                            Suffixe: <field name="suffix" class="oe_inline text-primary fw-bold" placeholder="XX"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Informations">
                            <field name="code" readonly="1"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Affichage">
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <group>
                        <group string="üí∞ Prime">
                            <field name="currency_id" options="{'no_create': True}"/>
                            <field name="price_type"/>
                            <field name="price_per_ton" invisible="price_type != 'fixed'"/>
                            <field name="price_percentage" invisible="price_type != 'percentage'"/>
                        </group>
                        <group string="üìä Statistiques">
                            <field name="total_premium_amount"/>
                            <field name="total_tonnage" string="Tonnage total certifi√©"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description de la certification..." 
                                   options="{'collaborative': true}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_certification_view_kanban" model="ir.ui.view">
        <field name="name">potting.certification.kanban</field>
        <field name="model">potting.certification</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="suffix"/>
                <field name="lot_count"/>
                <field name="color"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{!record.active.raw_value ? 'o_kanban_record_inactive' : ''}">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-4">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge text-bg-primary rounded-pill fs-5 fw-bold">
                                    <field name="suffix"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <span class="badge text-bg-info rounded-pill">
                                        <i class="fa fa-cube me-1"/>
                                        <field name="lot_count"/> lots
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_certification_view_search" model="ir.ui.view">
        <field name="name">potting.certification.search</field>
        <field name="model">potting.certification</field>
        <field name="arch" type="xml">
            <search string="Rechercher des certifications">
                <field name="name" string="Certification" 
                       filter_domain="['|', ('name', 'ilike', self), ('suffix', 'ilike', self)]"/>
                <field name="suffix"/>
                <separator/>
                <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archiv√©es" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Actif" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_certification" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">potting.certification</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle certification
            </p>
            <p>
                Les certifications permettent d'identifier les lots selon leur origine 
                (Fair Trade, Rain Forest Alliance, UTZ, etc.).
                <br/>
                Chaque certification ajoute un suffixe √† la r√©f√©rence du lot.
            </p>
        </field>
    </record>

</odoo>