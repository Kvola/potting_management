<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ====================================================================
         ALLOCATION CV-CONTRAT - VUES
         
         Ce fichier d√©finit les vues pour g√©rer les allocations de tonnage
         entre les Confirmations de Vente (CV) et les Contrats d'exportation.
         ==================================================================== -->

    <!-- =================================================================
         VUE LISTE (TREE)
         ================================================================= -->
    <record id="potting_cv_allocation_view_tree" model="ir.ui.view">
        <field name="name">potting.cv.allocation.tree</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <tree string="Allocations CV" 
                  editable="bottom"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'consumed'"
                  decoration-muted="state == 'cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="confirmation_vente_id" 
                       options="{'no_create': True}"
                       domain="[('state', '=', 'active'), ('tonnage_disponible_allocation', '>', 0)]"/>
                <field name="cv_reference_ccc" optional="show"/>
                <field name="cv_date_end" optional="show" widget="date"
                       decoration-danger="cv_date_end &lt; current_date"/>
                <field name="cv_tonnage_autorise" optional="hide"/>
                <field name="cv_tonnage_restant" optional="show"
                       decoration-danger="cv_tonnage_restant &lt;= 0"
                       decoration-success="cv_tonnage_restant > 0"/>
                <field name="customer_order_id" column_invisible="1"/>
                <field name="contract_tonnage" column_invisible="1"/>
                <field name="tonnage_alloue" sum="Total allou√©" 
                       class="fw-bold text-primary"/>
                <field name="tonnage_utilise" sum="Total utilis√©" optional="show"
                       decoration-info="tonnage_utilise > 0"/>
                <field name="tonnage_restant" sum="Total restant" optional="show"
                       decoration-success="tonnage_restant > 0"
                       decoration-danger="tonnage_restant &lt;= 0"/>
                <field name="progress" widget="progressbar" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'consumed'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="company_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- =================================================================
         VUE LISTE SIMPLIFI√âE (pour One2many dans les formulaires)
         ================================================================= -->
    <record id="potting_cv_allocation_view_tree_inline_order" model="ir.ui.view">
        <field name="name">potting.cv.allocation.tree.inline.order</field>
        <field name="model">potting.cv.allocation</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Allocations CV" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="confirmation_vente_id" 
                       options="{'no_create': True}"
                       domain="[('state', '=', 'active')]"
                       string="CV"/>
                <field name="cv_reference_ccc" string="R√©f. CCC"/>
                <field name="cv_tonnage_autorise" string="Autoris√© CV"/>
                <field name="cv_tonnage_restant" string="Dispo. CV"
                       decoration-danger="cv_tonnage_restant &lt;= 0"
                       decoration-success="cv_tonnage_restant > 0"/>
                <field name="tonnage_alloue" sum="Total" 
                       class="fw-bold"/>
                <field name="tonnage_utilise" string="Utilis√©"/>
                <field name="progress" widget="progressbar" string="%"/>
                <field name="state" widget="badge"/>
                <field name="customer_order_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- =================================================================
         VUE LISTE DEPUIS LA CV (pour voir les contrats li√©s)
         ================================================================= -->
    <record id="potting_cv_allocation_view_tree_inline_cv" model="ir.ui.view">
        <field name="name">potting.cv.allocation.tree.inline.cv</field>
        <field name="model">potting.cv.allocation</field>
        <field name="priority">110</field>
        <field name="arch" type="xml">
            <tree string="Contrats utilisant cette CV" editable="bottom"
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'consumed'"
                  decoration-muted="state == 'cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="customer_order_id" 
                       options="{'no_create': True}"
                       domain="[('state', 'not in', ['cancelled', 'done'])]"
                       string="Contrat"/>
                <field name="order_name" string="R√©f."/>
                <field name="contract_tonnage" string="Tonnage contrat"/>
                <field name="order_state" widget="badge" string="√âtat"/>
                <field name="tonnage_alloue" sum="Total" 
                       class="fw-bold text-primary"/>
                <field name="tonnage_utilise" string="Utilis√©"/>
                <field name="tonnage_restant" string="Restant"
                       decoration-success="tonnage_restant > 0"/>
                <field name="progress" widget="progressbar" string="%"/>
                <field name="note" optional="hide"/>
                <field name="confirmation_vente_id" column_invisible="1"/>
                <field name="state" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- =================================================================
         VUE FORMULAIRE
         ================================================================= -->
    <record id="potting_cv_allocation_view_form" model="ir.ui.view">
        <field name="name">potting.cv.allocation.form</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <form string="Allocation CV-Contrat">
                <header>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,active,consumed"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Active" bg_color="bg-success" 
                            invisible="state != 'active'"/>
                    <widget name="web_ribbon" title="Consomm√©e" bg_color="bg-warning" 
                            invisible="state != 'consumed'"/>
                    <widget name="web_ribbon" title="Annul√©e" bg_color="bg-secondary" 
                            invisible="state != 'cancelled'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group col="2">
                        <group string="üìã Confirmation de Vente">
                            <field name="confirmation_vente_id" 
                                   options="{'no_create': True}"
                                   domain="[('state', '=', 'active')]"/>
                            <field name="cv_reference_ccc" readonly="1"/>
                            <field name="cv_campaign_id" readonly="1"/>
                            <field name="cv_date_end" readonly="1"
                                   decoration-danger="cv_date_end &lt; current_date"/>
                            <field name="cv_tonnage_autorise" readonly="1"/>
                            <field name="cv_tonnage_restant" readonly="1"
                                   decoration-danger="cv_tonnage_restant &lt;= 0"
                                   decoration-success="cv_tonnage_restant > 0"/>
                        </group>
                        <group string="üìù Contrat">
                            <field name="customer_order_id" 
                                   options="{'no_create': True}"/>
                            <field name="order_name" readonly="1"/>
                            <field name="order_state" widget="badge" readonly="1"/>
                            <field name="contract_tonnage" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="üìä Allocation de Tonnage">
                        <group>
                            <field name="tonnage_alloue" class="fw-bold fs-4"/>
                            <field name="tonnage_utilise" readonly="1"/>
                            <field name="tonnage_restant" readonly="1"
                                   decoration-danger="tonnage_restant &lt;= 0"
                                   decoration-success="tonnage_restant > 0"/>
                        </group>
                        <group>
                            <label for="progress" string="Progression"/>
                            <field name="progress" widget="progressbar" nolabel="1"/>
                        </group>
                    </group>
                    
                    <group string="üìù Notes">
                        <field name="note" nolabel="1" placeholder="Notes sur cette allocation..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- =================================================================
         VUE RECHERCHE
         ================================================================= -->
    <record id="potting_cv_allocation_view_search" model="ir.ui.view">
        <field name="name">potting.cv.allocation.search</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <search string="Rechercher Allocation">
                <field name="confirmation_vente_id"/>
                <field name="customer_order_id"/>
                <field name="cv_reference_ccc"/>
                <separator/>
                <filter string="Actives" name="active" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Consomm√©es" name="consumed" 
                        domain="[('state', '=', 'consumed')]"/>
                <filter string="Annul√©es" name="cancelled" 
                        domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Tonnage restant" name="has_remaining" 
                        domain="[('tonnage_restant', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="CV" name="group_cv" 
                            context="{'group_by': 'confirmation_vente_id'}"/>
                    <filter string="Contrat" name="group_order" 
                            context="{'group_by': 'customer_order_id'}"/>
                    <filter string="√âtat" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Campagne CV" name="group_campaign" 
                            context="{'group_by': 'cv_campaign_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- =================================================================
         VUE KANBAN
         ================================================================= -->
    <record id="potting_cv_allocation_view_kanban" model="ir.ui.view">
        <field name="name">potting.cv.allocation.kanban</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="confirmation_vente_id">
                <field name="confirmation_vente_id"/>
                <field name="customer_order_id"/>
                <field name="cv_name"/>
                <field name="order_name"/>
                <field name="tonnage_alloue"/>
                <field name="tonnage_utilise"/>
                <field name="progress"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-1">
                                    <strong class="o_kanban_record_title">
                                        <field name="cv_name"/>
                                        <i class="fa fa-arrow-right mx-1"/>
                                        <field name="order_name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="d-flex justify-content-between">
                                        <span>Allou√©:</span>
                                        <strong><field name="tonnage_alloue"/> T</strong>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Utilis√©:</span>
                                        <span><field name="tonnage_utilise"/> T</span>
                                    </div>
                                    <field name="progress" widget="progressbar"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-warning="state == 'consumed'"
                                           decoration-muted="state == 'cancelled'"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- =================================================================
         VUE PIVOT
         ================================================================= -->
    <record id="potting_cv_allocation_view_pivot" model="ir.ui.view">
        <field name="name">potting.cv.allocation.pivot</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <pivot string="Allocations CV" sample="1">
                <field name="confirmation_vente_id" type="row"/>
                <field name="customer_order_id" type="col"/>
                <field name="tonnage_alloue" type="measure"/>
                <field name="tonnage_utilise" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- =================================================================
         VUE GRAPHIQUE
         ================================================================= -->
    <record id="potting_cv_allocation_view_graph" model="ir.ui.view">
        <field name="name">potting.cv.allocation.graph</field>
        <field name="model">potting.cv.allocation</field>
        <field name="arch" type="xml">
            <graph string="Allocations CV" type="bar" sample="1">
                <field name="confirmation_vente_id"/>
                <field name="tonnage_alloue" type="measure"/>
                <field name="tonnage_utilise" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- =================================================================
         ACTION PRINCIPALE
         ================================================================= -->
    <record id="action_potting_cv_allocation" model="ir.actions.act_window">
        <field name="name">Allocations CV-Contrats</field>
        <field name="res_model">potting.cv.allocation</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="search_view_id" ref="potting_cv_allocation_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune allocation CV-Contrat
            </p>
            <p>
                Les allocations permettent de r√©partir le tonnage d'une CV entre plusieurs contrats,
                ou de couvrir un contrat avec plusieurs CV.
            </p>
        </field>
    </record>

</odoo>
