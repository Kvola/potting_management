<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_container_view_tree" model="ir.ui.view">
        <field name="name">potting.container.tree</field>
        <field name="model">potting.container</field>
        <field name="arch" type="xml">
            <tree string="Conteneurs" 
                  decoration-info="state == 'available'" 
                  decoration-warning="state == 'loading'" 
                  decoration-primary="state == 'loaded'" 
                  decoration-success="state == 'shipped'"
                  multi_edit="1"
                  sample="1">
                <field name="name" decoration-bf="1"/>
                <field name="container_type" widget="badge"
                       decoration-info="container_type == '20'"
                       decoration-primary="container_type == '40'"
                       decoration-success="container_type == '40hc'"/>
                <field name="seal_number" optional="show"/>
                <field name="lot_count" string="Lots"/>
                <field name="total_tonnage" sum="Total" decoration-bf="1" class="text-primary"/>
                <field name="vessel_name" optional="show"/>
                <field name="booking_number" optional="hide"/>
                <field name="port_loading" optional="show"/>
                <field name="port_discharge" optional="show"/>
                <field name="date_potting" widget="date" optional="show"/>
                <field name="date_departure" widget="date" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'available'" 
                       decoration-warning="state == 'loading'" 
                       decoration-primary="state == 'loaded'" 
                       decoration-success="state == 'shipped'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_container_view_form" model="ir.ui.view">
        <field name="name">potting.container.form</field>
        <field name="model">potting.container</field>
        <field name="arch" type="xml">
            <form string="Conteneur">
                <header>
                    <button name="action_start_loading" type="object" string="Commencer chargement" invisible="state != 'available'" class="btn-primary"/>
                    <button name="action_finish_loading" type="object" string="Terminer chargement" invisible="state != 'loading'" class="btn-primary"/>
                    <button name="action_ship" type="object" string="Exp√©dier" invisible="state != 'loaded'" class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,loading,loaded,shipped"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lots" type="object" class="oe_stat_button" icon="fa-cubes">
                            <field name="lot_count" widget="statinfo" string="Lots"/>
                        </button>
                        <button name="action_view_transit_orders" type="object" class="oe_stat_button" icon="fa-truck">
                            <span class="o_stat_text">Ordres Transit</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Exp√©di√©" bg_color="bg-success" invisible="state != 'shipped'"/>
                    <widget name="web_ribbon" title="Charg√©" bg_color="bg-primary" invisible="state != 'loaded'"/>
                    <div class="oe_title">
                        <label for="name" string="Num√©ro de conteneur"/>
                        <h1>
                            <i class="fa fa-archive me-2 text-primary"/>
                            <field name="name" placeholder="Ex: MSKU1234567" class="text-primary"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üì¶ Informations conteneur">
                            <field name="container_type" widget="radio" options="{'horizontal': True}"/>
                            <field name="seal_number" placeholder="Num√©ro de plomb..."/>
                            <field name="tare_weight"/>
                            <field name="max_payload"/>
                        </group>
                        <group string="‚öñÔ∏è Chargement">
                            <field name="lot_count" readonly="1"/>
                            <field name="total_tonnage" widget="float" class="fw-bold text-primary" readonly="1"/>
                            <field name="date_potting" widget="date"/>
                        </group>
                    </group>
                    <group>
                        <group string="üö¢ Transport">
                            <field name="vessel_name" placeholder="Nom du navire..."/>
                            <field name="booking_number" placeholder="N¬∞ Booking..."/>
                            <field name="date_departure" widget="date"/>
                        </group>
                        <group string="üè¢ Ports">
                            <field name="port_loading" placeholder="Port de chargement..."/>
                            <field name="port_discharge" placeholder="Port de destination..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lots" name="lots">
                            <field name="lot_ids" readonly="1">
                                <tree string="Lots">
                                    <field name="name"/>
                                    <field name="transit_order_id"/>
                                    <field name="product_type"/>
                                    <field name="current_tonnage"/>
                                    <field name="date_potted"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ordres de Transit" name="transit_orders">
                            <field name="transit_order_ids" readonly="1">
                                <tree string="OT">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="consignee_id"/>
                                    <field name="product_type"/>
                                    <field name="tonnage"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_container_view_kanban" model="ir.ui.view">
        <field name="name">potting.container.kanban</field>
        <field name="model">potting.container</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="container_type"/>
                <field name="lot_count"/>
                <field name="total_tonnage"/>
                <field name="vessel_name"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5">
                                        <i class="fa fa-archive me-1 text-primary"/> <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'available': 'info', 'loading': 'warning', 'loaded': 'primary', 'shipped': 'success'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1">
                                    <span class="badge bg-secondary rounded-pill">
                                        <field name="container_type"/>
                                    </span>
                                </div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="fa fa-cubes me-1"/><t t-out="record.lot_count.raw_value"/> Lots
                                    </span>
                                    <span class="badge bg-info rounded-pill">
                                        <i class="fa fa-balance-scale me-1"/><t t-out="record.total_tonnage.raw_value"/> T
                                    </span>
                                </div>
                                <div t-if="record.vessel_name.value" class="mt-2 text-muted small">
                                    <i class="fa fa-ship me-1"/> <field name="vessel_name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_container_view_search" model="ir.ui.view">
        <field name="name">potting.container.search</field>
        <field name="model">potting.container</field>
        <field name="arch" type="xml">
            <search string="Rechercher conteneurs">
                <field name="name"/>
                <field name="seal_number"/>
                <field name="vessel_name"/>
                <field name="booking_number"/>
                <field name="port_loading"/>
                <field name="port_discharge"/>
                <separator/>
                <filter string="Disponible" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="En chargement" name="loading" domain="[('state', '=', 'loading')]"/>
                <filter string="Charg√©" name="loaded" domain="[('state', '=', 'loaded')]"/>
                <filter string="Exp√©di√©" name="shipped" domain="[('state', '=', 'shipped')]"/>
                <separator/>
                <filter string="20'" name="20ft" domain="[('container_type', '=', '20')]"/>
                <filter string="40'" name="40ft" domain="[('container_type', 'in', ('40', '40hc'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="type" context="{'group_by': 'container_type'}"/>
                    <filter string="Navire" name="vessel" context="{'group_by': 'vessel_name'}"/>
                    <filter string="Port d√©chargement" name="pod" context="{'group_by': 'port_discharge'}"/>
                    <filter string="√âtat" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_container" model="ir.actions.act_window">
        <field name="name">Conteneurs</field>
        <field name="res_model">potting.container</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau conteneur
            </p>
            <p>
                Cr√©ez des conteneurs pour empoter les lots de produits finis.
            </p>
        </field>
    </record>
</odoo>
