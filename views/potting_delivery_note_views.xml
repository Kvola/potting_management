<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_delivery_note_view_tree" model="ir.ui.view">
        <field name="name">potting.delivery.note.tree</field>
        <field name="model">potting.delivery.note</field>
        <field name="arch" type="xml">
            <tree string="Bons de Livraison" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'confirmed'" 
                  decoration-success="state == 'delivered'" 
                  decoration-muted="state == 'cancelled'"
                  multi_edit="1"
                  sample="1">
                <field name="name" decoration-bf="1"/>
                <field name="company_id" column_invisible="1"/>
                <field name="transit_order_id"/>
                <field name="customer_id"/>
                <field name="consignee_id"/>
                <field name="product_type" widget="badge" 
                       decoration-info="product_type == 'cocoa_mass'"
                       decoration-warning="product_type == 'cocoa_butter'"
                       decoration-success="product_type == 'cocoa_cake'"
                       decoration-primary="product_type == 'cocoa_powder'"/>
                <field name="lot_count"/>
                <field name="total_tonnage" sum="Total" decoration-bf="1"/>
                <field name="total_units" sum="Total"/>
                <field name="date_delivery"/>
                <field name="bl_number" optional="show"/>
                <field name="destination" optional="show"/>
                <field name="transport_mode" optional="hide"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'confirmed'" 
                       decoration-success="state == 'delivered'" 
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_delivery_note_view_form" model="ir.ui.view">
        <field name="name">potting.delivery.note.form</field>
        <field name="model">potting.delivery.note</field>
        <field name="arch" type="xml">
            <form string="Bon de Livraison">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer" 
                            class="btn-primary" invisible="state != 'draft'"
                            groups="potting_management.group_potting_shipping"/>
                    <button name="action_deliver" type="object" string="Marquer comme livr√©" 
                            class="btn-success" invisible="state != 'confirmed'"
                            groups="potting_management.group_potting_shipping"/>
                    <button name="action_cancel" type="object" string="Annuler" 
                            invisible="state in ('delivered', 'cancelled')"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon" 
                            invisible="state in ('draft', 'delivered')"
                            groups="potting_management.group_potting_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lots" type="object" class="oe_stat_button" icon="fa-cubes">
                            <field name="lot_count" widget="statinfo" string="Lots"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Livr√©" bg_color="bg-success" invisible="state != 'delivered'"/>
                    <widget name="web_ribbon" title="Annul√©" bg_color="bg-danger" invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <label for="name" string="Bon de Livraison"/>
                        <h1>
                            <field name="name" class="text-primary" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üìã Ordre de Transit">
                            <field name="company_id" invisible="1"/>
                            <field name="transit_order_id" 
                                   options="{'no_create': True}" 
                                   readonly="state != 'draft'"/>
                            <field name="customer_order_id" readonly="1"/>
                            <field name="campaign_period" readonly="1"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="consignee_id" readonly="1"/>
                        </group>
                        <group string="üì¶ Produit">
                            <field name="product_type" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="total_tonnage" widget="float" class="fw-bold text-primary"/>
                            <field name="total_units" class="fw-bold"/>
                        </group>
                    </group>
                    <group>
                        <group string="üöö Livraison">
                            <field name="date_delivery"/>
                            <field name="bl_number"/>
                            <field name="bl_date"/>
                            <field name="contract_number"/>
                            <field name="destination"/>
                        </group>
                        <group string="üöõ Transport">
                            <field name="transport_mode"/>
                            <field name="carrier_name"/>
                            <field name="driver_name"/>
                            <field name="vehicle_number"/>
                            <field name="vessel_name" readonly="1" invisible="transport_mode != 'maritime'"/>
                            <field name="booking_number" readonly="1" invisible="transport_mode != 'maritime'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lots" name="lots">
                            <field name="lot_ids" readonly="state != 'draft'"
                                   domain="[('transit_order_id', '=', transit_order_id)]"
                                   widget="many2many_tags" invisible="1"/>
                            <field name="lot_ids" readonly="state != 'draft'">
                                <tree string="Lots" create="0" delete="0"
                                      decoration-success="state == 'potted'">
                                    <field name="name"/>
                                    <field name="certification_id" optional="show"/>
                                    <field name="cocoa_quality" optional="show"/>
                                    <field name="target_tonnage"/>
                                    <field name="current_tonnage" sum="Total"/>
                                    <field name="current_units" sum="Total"/>
                                    <field name="packaging_display" optional="show"/>
                                    <field name="container_id"/>
                                    <field name="date_potted" optional="show"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                        <page string="Historique" name="history">
                            <group>
                                <group>
                                    <field name="date_created" readonly="1"/>
                                    <field name="created_by_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="date_confirmed" readonly="1"/>
                                    <field name="confirmed_by_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="date_delivered" readonly="1"/>
                                    <field name="delivered_by_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_delivery_note_view_kanban" model="ir.ui.view">
        <field name="name">potting.delivery.note.kanban</field>
        <field name="model">potting.delivery.note</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="transit_order_id"/>
                <field name="customer_id"/>
                <field name="lot_count"/>
                <field name="total_tonnage"/>
                <field name="date_delivery"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-1">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" 
                                       options="{'classes': {'draft': 'info', 'confirmed': 'warning', 'delivered': 'success', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><strong>OT:</strong> <field name="transit_order_id"/></div>
                                <div><strong>Client:</strong> <field name="customer_id"/></div>
                                <div>
                                    <strong>Lots:</strong> <field name="lot_count"/> | 
                                    <strong>Tonnage:</strong> <field name="total_tonnage"/> T
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="date_delivery"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_delivery_note_view_search" model="ir.ui.view">
        <field name="name">potting.delivery.note.search</field>
        <field name="model">potting.delivery.note</field>
        <field name="arch" type="xml">
            <search string="Bons de Livraison">
                <field name="name"/>
                <field name="transit_order_id"/>
                <field name="customer_id"/>
                <field name="consignee_id"/>
                <field name="bl_number"/>
                <field name="destination"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirm√©" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Livr√©" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Annul√©" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today" domain="[('date_delivery', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week" domain="[('date_delivery', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month" domain="[('date_delivery', '>=', context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Masse de cacao" name="cocoa_mass" domain="[('product_type', '=', 'cocoa_mass')]"/>
                <filter string="Beurre de cacao" name="cocoa_butter" domain="[('product_type', '=', 'cocoa_butter')]"/>
                <filter string="Cake de cacao" name="cocoa_cake" domain="[('product_type', '=', 'cocoa_cake')]"/>
                <filter string="Poudre de cacao" name="cocoa_powder" domain="[('product_type', '=', 'cocoa_powder')]"/>
                <separator/>
                <group expand="0" string="Regrouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="OT" name="group_ot" context="{'group_by': 'transit_order_id'}"/>
                    <filter string="Client" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Date de livraison" name="group_date" context="{'group_by': 'date_delivery:month'}"/>
                    <filter string="Type de produit" name="group_product_type" context="{'group_by': 'product_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_delivery_note" model="ir.actions.act_window">
        <field name="name">Bons de Livraison</field>
        <field name="res_model">potting.delivery.note</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="potting_delivery_note_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier bon de livraison !
            </p>
            <p>
                Les bons de livraison sont cr√©√©s depuis les Ordres de Transit.
                Vous pouvez s√©lectionner les lots √† inclure dans chaque BL.
            </p>
        </field>
    </record>
</odoo>
