<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================
         VUES: Allocation OT-Contrats
         Permet de r√©partir le tonnage d'un OT sur plusieurs contrats
         ================================================================ -->

    <!-- Form View -->
    <record id="potting_ot_contract_allocation_form" model="ir.ui.view">
        <field name="name">potting.ot.contract.allocation.form</field>
        <field name="model">potting.ot.contract.allocation</field>
        <field name="arch" type="xml">
            <form string="Allocation Tonnage Contrat ‚Üí OT">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üì¶ Ordre de Transit">
                            <field name="transit_order_id" options="{'no_create': True}"/>
                            <field name="ot_name" readonly="1"/>
                            <field name="ot_state" readonly="1"/>
                            <field name="ot_tonnage_total" readonly="1"/>
                        </group>
                        <group string="üìã Contrat">
                            <field name="customer_order_id" options="{'no_create': True}"/>
                            <field name="contract_name" readonly="1"/>
                            <field name="contract_number" readonly="1"/>
                            <field name="contract_state" readonly="1"/>
                            <field name="contract_tonnage" readonly="1"/>
                            <field name="contract_tonnage_restant" readonly="1"/>
                        </group>
                    </group>
                    <group string="üìä Allocation">
                        <group>
                            <field name="tonnage_alloue"/>
                            <field name="pourcentage_ot" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="contract_unit_price" readonly="1"/>
                            <field name="montant_alloue" readonly="1"/>
                        </group>
                    </group>
                    <group string="üìù Notes" col="1">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="potting_ot_contract_allocation_tree" model="ir.ui.view">
        <field name="name">potting.ot.contract.allocation.tree</field>
        <field name="model">potting.ot.contract.allocation</field>
        <field name="arch" type="xml">
            <tree string="Allocations OT-Contrats" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="transit_order_id"/>
                <field name="ot_state" optional="hide"/>
                <field name="customer_order_id"/>
                <field name="contract_number" optional="show"/>
                <field name="contract_tonnage_restant" optional="show"/>
                <field name="tonnage_alloue"/>
                <field name="pourcentage_ot"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="contract_unit_price" optional="show"/>
                <field name="montant_alloue" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_ot_contract_allocation_search" model="ir.ui.view">
        <field name="name">potting.ot.contract.allocation.search</field>
        <field name="model">potting.ot.contract.allocation</field>
        <field name="arch" type="xml">
            <search string="Recherche Allocations">
                <field name="transit_order_id"/>
                <field name="customer_order_id"/>
                <field name="ot_name"/>
                <field name="contract_name"/>
                <field name="contract_number"/>
                <separator/>
                <filter name="filter_ot_draft" string="OT Brouillon" domain="[('ot_state', '=', 'draft')]"/>
                <filter name="filter_contract_confirmed" string="Contrats Confirm√©s" domain="[('contract_state', '=', 'confirmed')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter name="group_ot" string="Ordre de Transit" context="{'group_by': 'transit_order_id'}"/>
                    <filter name="group_contract" string="Contrat" context="{'group_by': 'customer_order_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_ot_contract_allocation" model="ir.actions.act_window">
        <field name="name">Allocations OT-Contrats</field>
        <field name="res_model">potting.ot.contract.allocation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="potting_ot_contract_allocation_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune allocation OT-Contrat
            </p>
            <p>
                Les allocations permettent de r√©partir le tonnage d'un OT 
                sur plusieurs contrats. Le prix de l'OT sera alors calcul√© 
                comme une moyenne pond√©r√©e des prix des contrats.
            </p>
        </field>
    </record>

</odoo>
