<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================== -->
    <!-- VUE TREE - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
    <record id="potting_campaign_view_tree" model="ir.ui.view">
        <field name="name">potting.campaign.view.tree</field>
        <field name="model">potting.campaign</field>
        <field name="arch" type="xml">
            <tree string="Campagnes Caf√©-Cacao" 
                  decoration-success="is_current == True"
                  decoration-muted="state == 'closed'"
                  default_order="date_start desc">
                <field name="name" string="Campagne"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="is_current" string="En cours" widget="boolean"/>
                <field name="export_duty_rate" string="Droits export (%)"/>
                <field name="transit_order_count" string="Nb OT"/>
                <field name="total_tonnage" string="Tonnage (T)"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'active'"
                       decoration-muted="state == 'closed'"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================== -->
    <!-- VUE FORM - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
    <record id="potting_campaign_view_form" model="ir.ui.view">
        <field name="name">potting.campaign.view.form</field>
        <field name="model">potting.campaign</field>
        <field name="arch" type="xml">
            <form string="Campagne Caf√©-Cacao">
                <header>
                    <button name="action_activate" 
                            type="object" 
                            string="Activer" 
                            class="btn-primary"
                            invisible="state != 'draft'"
                            confirm="Voulez-vous activer cette campagne ?"/>
                    <button name="action_close" 
                            type="object" 
                            string="Cl√¥turer" 
                            class="btn-secondary"
                            invisible="state != 'active'"
                            confirm="Voulez-vous cl√¥turer cette campagne ? Cette action est irr√©versible."/>
                    <button name="action_draft" 
                            type="object" 
                            string="Remettre en brouillon" 
                            invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transit_orders" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-ship"
                                invisible="transit_order_count == 0">
                            <field name="transit_order_count" widget="statinfo" string="OT"/>
                        </button>
                        <button name="action_view_customer_orders" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-file-text-o"
                                invisible="customer_order_count == 0">
                            <field name="customer_order_count" widget="statinfo" string="Commandes"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" 
                            title="EN COURS" 
                            bg_color="bg-success" 
                            invisible="not is_current"/>
                    <widget name="web_ribbon" 
                            title="Cl√¥tur√©e" 
                            bg_color="bg-secondary" 
                            invisible="state != 'closed'"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Ex: 2024-2025" required="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="üìÖ P√©riode">
                            <field name="code" required="1"/>
                            <field name="date_start" required="1"/>
                            <field name="date_end" required="1"/>
                            <field name="is_current" readonly="1"/>
                        </group>
                        <group string="üí∞ Configuration">
                            <field name="currency_id" 
                                   options="{'no_create': True}"
                                   readonly="state == 'active'"/>
                            <field name="export_duty_rate"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Statistiques" name="statistics">
                            <group>
                                <group string="üìä Volumes">
                                    <field name="transit_order_count" readonly="1"/>
                                    <field name="customer_order_count" readonly="1"/>
                                    <field name="total_tonnage" readonly="1"/>
                                </group>
                                <group string="üíµ Montants">
                                    <field name="total_amount" readonly="1" widget="monetary"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong><i class="fa fa-info-circle"/> Info:</strong>
                                Les statistiques sont calcul√©es automatiquement √† partir des OT 
                                li√©s √† cette campagne. Le nombre de commandes correspond aux
                                commandes uniques dont au moins un OT est li√© √† cette campagne.
                            </div>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ou commentaires sur cette campagne..."/>
                        </page>
                    </notebook>
                    
                    <field name="company_id" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================================== -->
    <!-- VUE SEARCH - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
    <record id="potting_campaign_view_search" model="ir.ui.view">
        <field name="name">potting.campaign.view.search</field>
        <field name="model">potting.campaign</field>
        <field name="arch" type="xml">
            <search string="Rechercher une campagne">
                <field name="name" string="Campagne"/>
                <field name="code"/>
                <separator/>
                <filter string="En cours" name="filter_current" domain="[('is_current', '=', True)]"/>
                <filter string="Active" name="filter_active" domain="[('state', '=', 'active')]"/>
                <filter string="Brouillon" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Cl√¥tur√©e" name="filter_closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Archiv√©" name="filter_inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Ann√©e de d√©but" name="group_year" context="{'group_by': 'date_start:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================== -->
    <!-- VUE KANBAN - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
    <record id="potting_campaign_view_kanban" model="ir.ui.view">
        <field name="name">potting.campaign.view.kanban</field>
        <field name="model">potting.campaign</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_order="date_start desc">
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="is_current"/>
                <field name="state"/>
                <field name="export_duty_rate"/>
                <field name="transit_order_count"/>
                <field name="total_tonnage"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_current.raw_value ? 'border-success' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span t-if="record.is_current.raw_value" class="badge bg-success me-2">EN COURS</span>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'active': 'success', 'closed': 'secondary'}}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="date_start"/> ‚Üí <field name="date_end"/>
                                    <div class="mt-2">
                                        <span class="text-muted">Droits export:</span>
                                        <strong><field name="export_duty_rate"/> %</strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge bg-primary">
                                            <field name="transit_order_count"/> OT
                                        </span>
                                        <span class="badge bg-info ms-1">
                                            <field name="total_tonnage"/> T
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================== -->
    <!-- ACTION - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
    <record id="potting_campaign_action" model="ir.actions.act_window">
        <field name="name">Campagnes Caf√©-Cacao</field>
        <field name="res_model">potting.campaign</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="potting_campaign_view_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle campagne caf√©-cacao
            </p>
            <p>
                Les campagnes caf√©-cacao permettent de g√©rer les p√©riodes 
                et les taux des droits d'exportation.
            </p>
            <p>
                Une campagne s'√©tend g√©n√©ralement d'octobre √† septembre de l'ann√©e suivante
                (ex: 2024-2025 = 1er octobre 2024 au 30 septembre 2025).
            </p>
            <p>
                <strong>Note:</strong> Les prix sont d√©finis au niveau des contrats (commandes),
                pas au niveau de la campagne.
            </p>
        </field>
    </record>

    <!-- ============================================================== -->
    <!-- MENU - CAMPAGNES CAF√â-CACAO -->
    <!-- ============================================================== -->
    
</odoo>
