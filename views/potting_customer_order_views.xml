<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_customer_order_view_tree" model="ir.ui.view">
        <field name="name">potting.customer.order.tree</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <tree string="Commandes clients" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'done'" 
                  decoration-muted="state == 'cancelled'"
                  multi_edit="1"
                  sample="1">
                <field name="company_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="name" decoration-bf="1"/>
                <field name="contract_number" optional="show"/>
                <field name="customer_id"/>
                <field name="product_type"/>
                <field name="campaign_id" optional="show"/>
                <field name="campaign_period" column_invisible="1"/>
                <field name="date_order" widget="date"/>
                <field name="date_expected" widget="date" optional="show"/>
                <field name="transit_order_count" string="OT"/>
                <field name="contract_tonnage" string="Contrat (T)" optional="show" decoration-bf="1"/>
                <field name="total_tonnage" string="OT (T)" sum="Total" decoration-bf="1" class="text-primary"/>
                <field name="remaining_contract_tonnage" string="Restant (T)" optional="hide" decoration-danger="remaining_contract_tonnage &lt; 0" decoration-success="remaining_contract_tonnage == 0"/>
                <field name="unit_price" string="Prix (‚Ç¨/T)" widget="monetary" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user" optional="hide"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state in ('confirmed', 'in_progress')" 
                       decoration-success="state == 'done'" 
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_customer_order_view_form" model="ir.ui.view">
        <field name="name">potting.customer.order.form</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <form string="Commande client">
                <header>
                    <button name="action_open_create_ot_wizard" type="object" string="‚ûï Ajouter des OT" class="btn-success" invisible="state in ('done', 'cancelled')" groups="potting_management.group_potting_shipping,potting_management.group_potting_manager"/>
                    <button name="action_open_generate_ot_wizard" type="object" string="üöÄ G√©n√©rer OT auto" class="btn-info" invisible="state in ('done', 'cancelled')" groups="potting_management.group_potting_shipping,potting_management.group_potting_manager" title="G√©n√©rer automatiquement plusieurs OT en fonction du tonnage total"/>
                    <button name="action_confirm" type="object" string="Confirmer" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="D√©marrer" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_done" type="object" string="Terminer" class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Annuler" invisible="state in ('done', 'cancelled')"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon" invisible="state in ('draft', 'done')" groups="potting_management.group_potting_manager" confirm="√ätes-vous s√ªr de vouloir remettre cette commande en brouillon ? Les OT associ√©s seront √©galement remis en brouillon."/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transit_orders" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="transit_order_count" widget="statinfo" string="Ordres de Transit"/>
                        </button>
                        <button name="action_view_lots" type="object" class="oe_stat_button" icon="fa-cubes">
                            <span class="o_stat_text">Lots</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Termin√©e" bg_color="bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Annul√©e" bg_color="bg-danger" invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" class="text-primary"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üë§ Client">
                            <field name="company_id" invisible="1"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="product_type" required="1"/>
                            <field name="campaign_id" options="{'no_create': True}"/>
                            <field name="campaign_period" invisible="1"/>
                            <field name="date_order" widget="date"/>
                            <field name="date_expected" widget="date"/>
                        </group>
                        <group string="üìã Contrat">
                            <field name="contract_number"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <label for="contract_tonnage"/>
                            <div class="o_row">
                                <field name="contract_tonnage" class="oe_inline fw-bold"
                                       readonly="state not in ('draft', 'confirmed')" 
                                       groups="potting_management.group_potting_commercial,potting_management.group_potting_shipping,potting_management.group_potting_manager"/>
                                <span class="text-muted">tonnes pr√©vues</span>
                            </div>
                            <label for="total_tonnage"/>
                            <div class="o_row">
                                <field name="total_tonnage" widget="float" class="oe_inline text-primary fw-bold" readonly="1"/>
                                <span class="text-muted">tonnes OT</span>
                            </div>
                            <label for="remaining_contract_tonnage"/>
                            <div class="o_row">
                                <field name="remaining_contract_tonnage" class="oe_inline" readonly="1"
                                       decoration-danger="remaining_contract_tonnage &lt; 0"
                                       decoration-success="remaining_contract_tonnage == 0"/>
                                <span class="text-muted">tonnes restantes</span>
                            </div>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="üí∞ Prix du contrat">
                            <field name="currency_id" 
                                   options="{'no_create': True}"
                                   readonly="state not in ('draft', 'confirmed')"/>
                            <label for="unit_price"/>
                            <div class="o_row">
                                <field name="unit_price" class="oe_inline fw-bold text-primary"
                                       readonly="state not in ('draft', 'confirmed')"
                                       groups="potting_management.group_potting_commercial,potting_management.group_potting_shipping,potting_management.group_potting_manager"/>
                                <span class="text-muted">/T</span>
                            </div>
                            <field name="official_cocoa_price" readonly="1" 
                                   invisible="not use_official_price"/>
                            <field name="use_official_price"/>
                            <field name="certification_ids" widget="many2many_tags"/>
                            <field name="certification_premium" readonly="1"/>
                        </group>
                        <group string="üìä Montants">
                            <field name="total_amount" readonly="1"/>
                            <field name="export_duty_rate"/>
                            <field name="export_duty_amount" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ordres de Transit" name="transit_orders">
                            <field name="transit_order_ids" context="{'default_customer_order_id': id}">
                                <tree string="Ordres de Transit" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'">
                                    <field name="name" decoration-bf="1"/>
                                    <field name="consignee_id"/>
                                    <field name="product_type" widget="badge"/>
                                    <field name="tonnage" sum="Total" decoration-bf="1"/>
                                    <field name="vessel_id" string="Navire"/>
                                    <field name="pod"/>
                                    <field name="container_size" widget="badge"/>
                                    <field name="lot_range"/>
                                    <field name="progress_percentage" widget="progressbar"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                        <page string="üí∞ Co√ªts &amp; Droits" name="costs">
                            <group>
                                <group string="Droits d'exportation">
                                    <field name="export_duty_rate"/>
                                    <field name="export_duty_amount"/>
                                    <field name="export_duty_collected" widget="boolean_toggle"/>
                                </group>
                                <group string="Co√ªts suppl√©mentaires">
                                    <field name="transport_cost"/>
                                    <field name="storage_cost"/>
                                    <field name="insurance_cost"/>
                                    <field name="other_costs"/>
                                    <field name="total_costs"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_customer_order_view_kanban" model="ir.ui.view">
        <field name="name">potting.customer.order.kanban</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="date_order"/>
                <field name="total_tonnage"/>
                <field name="transit_order_count"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5">
                                        <i class="fa fa-file-text me-1 text-primary"/> <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'confirmed': 'info', 'in_progress': 'warning', 'done': 'success', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1"><i class="fa fa-building text-muted me-1"/> <field name="customer_id"/></div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <span class="badge text-bg-primary rounded-pill">
                                        <i class="fa fa-truck me-1"/><t t-out="record.transit_order_count.raw_value"/> OT
                                    </span>
                                    <span class="badge text-bg-info rounded-pill">
                                        <i class="fa fa-balance-scale me-1"/><t t-out="record.total_tonnage.raw_value"/> T
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left text-muted small">
                                    <i class="fa fa-calendar"/> <field name="date_order"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_customer_order_view_search" model="ir.ui.view">
        <field name="name">potting.customer.order.search</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher commandes">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="user_id"/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirm√©es" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Termin√©es" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Mes commandes" name="my_orders" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="√âtat" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="user" context="{'group_by': 'user_id'}"/>
                    <filter string="Mois" name="month" context="{'group_by': 'date_order:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_customer_order" model="ir.actions.act_window">
        <field name="name">Commandes clients</field>
        <field name="res_model">potting.customer.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_orders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle commande client
            </p>
            <p>
                Commencez par cr√©er une commande client, puis ajoutez les Ordres de Transit correspondants.
            </p>
            <p>
                <a type="action" name="%(potting_management.action_potting_import_contracts_wizard)d">
                    üì• Importer des contrats depuis Excel
                </a>
            </p>
        </field>
    </record>

    <!-- Import Button for Tree View Header -->
    <record id="potting_customer_order_view_tree_inherit_import" model="ir.ui.view">
        <field name="name">potting.customer.order.tree.import</field>
        <field name="model">potting.customer.order</field>
        <field name="inherit_id" ref="potting_customer_order_view_tree"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <header>
                    <button name="%(action_potting_import_contracts_wizard)d" 
                            string="üì• Importer (Excel)" 
                            type="action" 
                            class="btn-secondary"
                            groups="potting_management.group_potting_shipping,potting_management.group_potting_manager"/>
                </header>
            </tree>
        </field>
    </record>
</odoo>
