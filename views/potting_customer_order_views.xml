<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_customer_order_view_tree" model="ir.ui.view">
        <field name="name">potting.customer.order.tree</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <tree string="Commandes clients" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="date_order"/>
                <field name="date_expected"/>
                <field name="transit_order_count"/>
                <field name="total_tonnage" sum="Total"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('confirmed', 'in_progress')" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_customer_order_view_form" model="ir.ui.view">
        <field name="name">potting.customer.order.form</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <form string="Commande client">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Démarrer" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_done" type="object" string="Terminer" class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Annuler" invisible="state in ('done', 'cancelled')"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transit_orders" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="transit_order_count" widget="statinfo" string="Ordres de Transit"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="date_order"/>
                            <field name="date_expected"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="total_tonnage"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ordres de Transit" name="transit_orders">
                            <field name="transit_order_ids" context="{'default_customer_order_id': id}">
                                <tree string="Ordres de Transit" editable="bottom">
                                    <field name="name"/>
                                    <field name="consignee_id"/>
                                    <field name="product_type"/>
                                    <field name="tonnage" sum="Total"/>
                                    <field name="vessel_name"/>
                                    <field name="pod"/>
                                    <field name="container_size"/>
                                    <field name="lot_range"/>
                                    <field name="booking_number"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_customer_order_view_kanban" model="ir.ui.view">
        <field name="name">potting.customer.order.kanban</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="date_order"/>
                <field name="total_tonnage"/>
                <field name="transit_order_count"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'confirmed': 'info', 'in_progress': 'warning', 'done': 'success', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="customer_id"/>
                                <div class="mt4">
                                    <span class="badge bg-primary"><t t-out="record.transit_order_count.raw_value"/> OT</span>
                                    <span class="badge bg-secondary ms-1"><t t-out="record.total_tonnage.raw_value"/> T</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date_order"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_customer_order_view_search" model="ir.ui.view">
        <field name="name">potting.customer.order.search</field>
        <field name="model">potting.customer.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher commandes">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="user_id"/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmées" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Terminées" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Mes commandes" name="my_orders" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="user" context="{'group_by': 'user_id'}"/>
                    <filter string="Mois" name="month" context="{'group_by': 'date_order:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_potting_customer_order" model="ir.actions.act_window">
        <field name="name">Commandes clients</field>
        <field name="res_model">potting.customer.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_orders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle commande client
            </p>
            <p>
                Commencez par créer une commande client, puis ajoutez les Ordres de Transit correspondants.
            </p>
        </field>
    </record>
</odoo>
