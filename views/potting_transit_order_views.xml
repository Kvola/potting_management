<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="potting_transit_order_view_tree" model="ir.ui.view">
        <field name="name">potting.transit.order.tree</field>
        <field name="model">potting.transit.order</field>
        <field name="arch" type="xml">
            <tree string="Ordres de Transit" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state in ('lots_generated', 'in_progress')" 
                  decoration-success="state == 'done'" 
                  decoration-muted="state == 'cancelled'"
                  multi_edit="1"
                  sample="1">
                <field name="name" decoration-bf="1"/>
                <field name="company_id" column_invisible="1"/>
                <field name="customer_order_id" optional="show"/>
                <field name="campaign_period" optional="show"/>
                <field name="consignee_id"/>
                <field name="product_type" widget="badge" 
                       decoration-info="product_type == 'cocoa_mass'"
                       decoration-warning="product_type == 'cocoa_butter'"
                       decoration-success="product_type == 'cocoa_cake'"
                       decoration-primary="product_type == 'cocoa_powder'"/>
                <field name="tonnage" sum="Total" decoration-bf="1"/>
                <field name="vessel_id" string="Navire" optional="show"/>
                <field name="pod" optional="show"/>
                <field name="container_size" optional="hide"/>
                <field name="lot_range" optional="show"/>
                <field name="lot_count"/>
                <field name="potted_lot_count"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="booking_number" optional="hide"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-primary="state == 'lots_generated'" 
                       decoration-warning="state == 'in_progress'" 
                       decoration-success="state in ('ready_validation', 'done')" 
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="potting_transit_order_view_form" model="ir.ui.view">
        <field name="name">potting.transit.order.form</field>
        <field name="model">potting.transit.order</field>
        <field name="arch" type="xml">
            <form string="Ordre de Transit">
                <header>
                    <button name="action_generate_lots" type="object" string="G√©n√©rer les lots" class="btn-primary" invisible="state != 'draft'" groups="potting_management.group_potting_shipping"/>
                    <button name="action_start_production" type="object" string="D√©marrer production" invisible="state != 'lots_generated'" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_mark_ready" type="object" string="Pr√™t pour validation" invisible="state != 'in_progress'" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_validate" type="object" string="Valider" class="btn-success" invisible="state != 'ready_validation'" groups="potting_management.group_potting_ceo_agent"/>
                    <button name="action_cancel" type="object" string="Annuler" invisible="state in ('done', 'cancelled')"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon" invisible="state in ('draft', 'done')" groups="potting_management.group_potting_manager" confirm="√ätes-vous s√ªr de vouloir remettre cet OT en brouillon ? Les lots seront √©galement remis en brouillon."/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,lots_generated,in_progress,ready_validation,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lots" type="object" class="oe_stat_button" icon="fa-cubes">
                            <field name="lot_count" widget="statinfo" string="Lots"/>
                        </button>
                        <button name="action_view_potted_lots" type="object" class="oe_stat_button" icon="fa-check-circle">
                            <field name="potted_lot_count" widget="statinfo" string="Empot√©s"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Valid√©" bg_color="bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Annul√©" bg_color="bg-danger" invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <label for="name" string="Num√©ro OT"/>
                        <h1>
                            <field name="name" class="text-primary" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="üìã Informations g√©n√©rales">
                            <field name="company_id" invisible="1"/>
                            <field name="is_created_from_order" invisible="1"/>
                            <field name="customer_order_id" options="{'no_create': True}" readonly="is_created_from_order or state != 'draft'"/>
                            <field name="campaign_period" readonly="1"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="consignee_id" 
                                   domain="[('is_potting_consignee', '=', True)]" 
                                   context="{'default_is_potting_consignee': True, 'default_is_company': True}"/>
                            <field name="date_created" readonly="1"/>
                        </group>
                        <group string="üì¶ Produit">
                            <field name="product_type" widget="radio" options="{'horizontal': True}"/>
                            <field name="product_id" domain="[('potting_product_type', '=', product_type)]" options="{'no_create': True}"/>
                            <field name="tonnage" widget="float" class="fw-bold text-primary"/>
                        </group>
                    </group>
                    <group>
                        <group string="üö¢ Transport">
                            <field name="vessel_id" options="{'no_create_edit': True}"/>
                            <field name="pod" placeholder="Port de destination..."/>
                            <field name="container_size" widget="radio" options="{'horizontal': True}"/>
                            <field name="booking_number" placeholder="N¬∞ Booking..."/>
                        </group>
                        <group string="üìä Progression">
                            <field name="lot_range" readonly="1"/>
                            <div class="d-flex align-items-center gap-2">
                                <label for="lot_count" string="Lots"/>
                                <field name="lot_count" class="text-center" readonly="1"/>
                                <span class="mx-1">/</span>
                                <field name="potted_lot_count" class="text-success text-center" readonly="1"/>
                                <span class="text-muted">empot√©s</span>
                            </div>
                            <field name="progress_percentage" widget="progressbar" options="{'editable': false}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lots" name="lots">
                            <field name="lot_ids" readonly="state not in ('draft', 'lots_generated', 'in_progress')">
                                <tree string="Lots" decoration-info="state == 'draft'" decoration-warning="state == 'in_production'" decoration-primary="state == 'ready'" decoration-success="state == 'potted'">
                                    <field name="name"/>
                                    <field name="product_type"/>
                                    <field name="target_tonnage"/>
                                    <field name="current_tonnage"/>
                                    <field name="remaining_tonnage"/>
                                    <field name="fill_percentage" widget="progressbar"/>
                                    <field name="is_full"/>
                                    <field name="container_id"/>
                                    <field name="date_potted"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajoutez des notes ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="potting_transit_order_view_kanban" model="ir.ui.view">
        <field name="name">potting.transit.order.kanban</field>
        <field name="model">potting.transit.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="consignee_id"/>
                <field name="product_type"/>
                <field name="tonnage"/>
                <field name="lot_count"/>
                <field name="potted_lot_count"/>
                <field name="progress_percentage"/>
                <field name="state"/>
                <progressbar field="state" colors='{"draft": "secondary", "lots_generated": "info", "in_progress": "warning", "ready_validation": "primary", "done": "success", "cancelled": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5">
                                        <i class="fa fa-truck me-1 text-primary"/> <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'lots_generated': 'info', 'in_progress': 'warning', 'ready_validation': 'primary', 'done': 'success', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1"><i class="fa fa-user-circle text-muted me-1"/> <field name="consignee_id"/></div>
                                <div class="mb-1"><i class="fa fa-cube text-muted me-1"/> <field name="product_type"/></div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="fa fa-balance-scale me-1"/><t t-out="record.tonnage.raw_value"/> T
                                    </span>
                                    <span class="badge bg-info rounded-pill">
                                        <i class="fa fa-cubes me-1"/><t t-out="record.potted_lot_count.raw_value"/>/<t t-out="record.lot_count.raw_value"/> Lots
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <field name="progress_percentage" widget="progressbar" options="{'editable': false}"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2" t-if="record.customer_id.value">
                                <div class="oe_kanban_bottom_left text-muted small">
                                    <i class="fa fa-building"/> <field name="customer_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="potting_transit_order_view_search" model="ir.ui.view">
        <field name="name">potting.transit.order.search</field>
        <field name="model">potting.transit.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher OT">
                <field name="name"/>
                <field name="customer_order_id"/>
                <field name="customer_id"/>
                <field name="consignee_id"/>
                <field name="vessel_name"/>
                <field name="pod"/>
                <field name="booking_number"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Lots g√©n√©r√©s" name="lots_generated" domain="[('state', '=', 'lots_generated')]"/>
                <filter string="En cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Pr√™t validation" name="ready_validation" domain="[('state', '=', 'ready_validation')]"/>
                <filter string="Valid√©s" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Masse de cacao" name="cocoa_mass" domain="[('product_type', '=', 'cocoa_mass')]"/>
                <filter string="Beurre de cacao" name="cocoa_butter" domain="[('product_type', '=', 'cocoa_butter')]"/>
                <filter string="Cake de cacao" name="cocoa_cake" domain="[('product_type', '=', 'cocoa_cake')]"/>
                <filter string="Poudre de cacao" name="cocoa_powder" domain="[('product_type', '=', 'cocoa_powder')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Destinataire" name="consignee" context="{'group_by': 'consignee_id'}"/>
                    <filter string="Type de produit" name="product_type" context="{'group_by': 'product_type'}"/>
                    <filter string="Navire" name="vessel" context="{'group_by': 'vessel_name'}"/>
                    <filter string="Port" name="pod" context="{'group_by': 'pod'}"/>
                    <filter string="√âtat" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_potting_transit_order" model="ir.actions.act_window">
        <field name="name">Ordres de Transit</field>
        <field name="res_model">potting.transit.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouvel Ordre de Transit
            </p>
            <p>
                Cr√©ez des OT pour chaque exp√©dition, puis g√©n√©rez automatiquement les lots selon le tonnage.
            </p>
        </field>
    </record>

    <!-- Action for CEO Agent -->
    <record id="action_potting_transit_order_ceo_agent" model="ir.actions.act_window">
        <field name="name">Ordres de Transit - Validation</field>
        <field name="res_model">potting.transit.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun OT en cours
            </p>
            <p>
                Les OT en cours de production appara√Ætront ici pour validation.
            </p>
        </field>
    </record>

    <!-- Vessel Views -->
    <record id="potting_vessel_view_tree" model="ir.ui.view">
        <field name="name">potting.vessel.tree</field>
        <field name="model">potting.vessel</field>
        <field name="arch" type="xml">
            <tree string="Navires" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="shipping_company"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_potting_vessel" model="ir.actions.act_window">
        <field name="name">Navires</field>
        <field name="res_model">potting.vessel</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>