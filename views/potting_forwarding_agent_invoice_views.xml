<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- FACTURE TRANSITAIRE - TREE VIEW -->
    <!-- ================================================================== -->
    
    <record id="potting_forwarding_agent_invoice_tree" model="ir.ui.view">
        <field name="name">potting.forwarding.agent.invoice.tree</field>
        <field name="model">potting.forwarding.agent.invoice</field>
        <field name="arch" type="xml">
            <tree string="Factures Transitaires" 
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'submitted'"
                  decoration-success="state == 'validated'"
                  decoration-primary="state == 'paid'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="invoice_date"/>
                <field name="forwarding_agent_id"/>
                <field name="amount_untaxed" sum="Total HT"/>
                <field name="amount_tax" sum="Total TVA"/>
                <field name="amount_total" sum="Total TTC"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-success="state == 'validated'"
                       decoration-primary="state == 'paid'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="validated_by_id" optional="hide"/>
                <field name="company_id" column_invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- ================================================================== -->
    <!-- FACTURE TRANSITAIRE - FORM VIEW -->
    <!-- ================================================================== -->
    
    <record id="potting_forwarding_agent_invoice_form" model="ir.ui.view">
        <field name="name">potting.forwarding.agent.invoice.form</field>
        <field name="model">potting.forwarding.agent.invoice</field>
        <field name="arch" type="xml">
            <form string="Facture Transitaire">
                <header>
                    <!-- Boutons selon l'√©tat -->
                    <button name="action_submit" type="object" 
                            string="Soumettre pour validation"
                            class="btn-primary"
                            invisible="state != 'draft'"
                            groups="potting_management.group_potting_shipping,potting_management.group_potting_manager"/>
                    
                    <button name="action_validate" type="object"
                            string="Valider"
                            class="btn-success"
                            invisible="state != 'submitted'"
                            groups="potting_management.group_potting_accountant,potting_management.group_potting_manager"/>
                    
                    <button name="action_reject" type="object"
                            string="Rejeter"
                            class="btn-warning"
                            invisible="state != 'submitted'"
                            groups="potting_management.group_potting_accountant,potting_management.group_potting_manager"/>
                    
                    <button name="action_create_payment" type="object"
                            string="Cr√©er Paiement"
                            class="btn-primary"
                            invisible="state != 'validated'"
                            groups="potting_management.group_potting_accountant,potting_management.group_potting_manager"/>
                    
                    <button name="action_set_to_draft" type="object"
                            string="Remettre en brouillon"
                            invisible="state not in ('submitted', 'cancelled')"
                            groups="potting_management.group_potting_manager"/>
                    
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state in ('paid', 'cancelled')"
                            groups="potting_management.group_potting_manager"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,validated,paid"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice_file" type="object"
                                class="oe_stat_button" icon="fa-file-pdf-o"
                                invisible="not invoice_file and not attachment_ids">
                            <span>Voir Facture</span>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Pay√©e" bg_color="text-bg-success"
                            invisible="state != 'paid'"/>
                    <widget name="web_ribbon" title="Annul√©e" bg_color="text-bg-danger"
                            invisible="state != 'cancelled'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <!-- Alerte si rejet√©e -->
                    <div class="alert alert-warning" role="alert"
                         invisible="not rejection_reason">
                        <strong>‚ö†Ô∏è Facture rejet√©e : </strong>
                        <field name="rejection_reason" readonly="1"/>
                    </div>
                    
                    <group>
                        <group string="Informations Facture">
                            <field name="invoice_number" 
                                   readonly="state not in ('draft',)"/>
                            <field name="invoice_date" 
                                   readonly="state not in ('draft',)"/>
                            <field name="received_date" 
                                   readonly="state not in ('draft',)"/>
                            <field name="forwarding_agent_id" 
                                   readonly="state not in ('draft',)"
                                   options="{'no_create': True}"/>
                            <field name="partner_id" invisible="1"/>
                        </group>
                        <group string="Montants">
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_untaxed" 
                                   readonly="state not in ('draft',)"/>
                            <field name="amount_tax" 
                                   readonly="state not in ('draft',)"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Ordres de Transit">
                            <field name="transit_order_ids" widget="many2many_tags"
                                   readonly="state not in ('draft',)"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Soci√©t√©">
                            <field name="company_id" groups="base.group_multi_company"
                                   readonly="state not in ('draft',)"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üìÑ Aper√ßu Facture" name="invoice_preview">
                            <group>
                                <group string="üìé Fichier Facture">
                                    <field name="invoice_file" filename="invoice_filename"
                                           readonly="state not in ('draft', 'submitted')"
                                           widget="binary"/>
                                    <field name="invoice_filename" invisible="1"/>
                                </group>
                            </group>
                            <!-- Pr√©visualisation du PDF -->
                            <div class="o_invoice_preview mt-3" 
                                 style="border: 1px solid #ddd; border-radius: 4px; padding: 10px; background: white;"
                                 invisible="not invoice_file">
                                <field name="invoice_file" 
                                       invisible="not invoice_file"
                                       widget="pdf_viewer"
                                       filename="invoice_filename"
                                       nolabel="1"/>
                            </div>
                            <div invisible="invoice_file" class="alert alert-info mt-3" role="alert">
                                <i class="fa fa-info-circle me-2"/>
                                Aucune facture jointe. Cliquez sur le champ ci-dessus pour t√©l√©verser un fichier (PDF ou image).
                            </div>
                        </page>
                        <page string="Pi√®ces jointes" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"
                                   readonly="state not in ('draft', 'submitted')"/>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" 
                                   readonly="state not in ('draft',)"
                                   placeholder="Description des services factur√©s..."/>
                        </page>
                        <page string="Validation" name="validation"
                              invisible="state == 'draft'">
                            <group>
                                <group string="Soumission">
                                    <field name="submitted_by_id" readonly="1"/>
                                    <field name="submitted_date" readonly="1"/>
                                </group>
                                <group string="Validation">
                                    <field name="validated_by_id" readonly="1"/>
                                    <field name="validation_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Paiement" name="payment"
                              invisible="state not in ('validated', 'paid')">
                            <group>
                                <field name="payment_id" readonly="1"/>
                                <field name="payment_request_id" readonly="1"/>
                                <field name="is_paid" readonly="1"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" 
                                   placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                    
                    <field name="company_id" invisible="1"/>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- ================================================================== -->
    <!-- FACTURE TRANSITAIRE - SEARCH VIEW -->
    <!-- ================================================================== -->
    
    <record id="potting_forwarding_agent_invoice_search" model="ir.ui.view">
        <field name="name">potting.forwarding.agent.invoice.search</field>
        <field name="model">potting.forwarding.agent.invoice</field>
        <field name="arch" type="xml">
            <search string="Rechercher Factures">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="forwarding_agent_id"/>
                <field name="transit_order_ids"/>
                
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="√Ä valider" name="to_validate" domain="[('state', '=', 'submitted')]"/>
                <filter string="Valid√©es" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Pay√©es" name="paid" domain="[('state', '=', 'paid')]"/>
                
                <separator/>
                
                <filter string="Mes soumissions" name="my_submitted"
                        domain="[('submitted_by_id', '=', uid)]"/>
                
                <separator/>
                
                <group expand="0" string="Grouper par">
                    <filter string="Transitaire" name="group_agent" context="{'group_by': 'forwarding_agent_id'}"/>
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date facture" name="group_date" context="{'group_by': 'invoice_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ================================================================== -->
    <!-- FACTURE TRANSITAIRE - KANBAN VIEW -->
    <!-- ================================================================== -->
    
    <record id="potting_forwarding_agent_invoice_kanban" model="ir.ui.view">
        <field name="name">potting.forwarding.agent.invoice.kanban</field>
        <field name="model">potting.forwarding.agent.invoice</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="forwarding_agent_id"/>
                <field name="amount_total"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="invoice_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection"
                                       options="{'classes': {'draft': 'info', 'submitted': 'warning', 'validated': 'success', 'paid': 'primary', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>N¬∞ Facture:</strong> <field name="invoice_number"/>
                                </div>
                                <div>
                                    <strong>Transitaire:</strong> <field name="forwarding_agent_id"/>
                                </div>
                                <div>
                                    <strong>Montant:</strong>
                                    <field name="amount_total" widget="monetary"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="invoice_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ================================================================== -->
    <!-- ACTIONS -->
    <!-- ================================================================== -->
    
    <!-- Action principale - Toutes les factures -->
    <record id="action_potting_forwarding_agent_invoice" model="ir.actions.act_window">
        <field name="name">Factures Transitaires</field>
        <field name="res_model">potting.forwarding.agent.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="potting_forwarding_agent_invoice_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une facture transitaire
            </p>
            <p>
                Les factures transitaires doivent √™tre valid√©es par le comptable avant paiement.
            </p>
        </field>
    </record>
    
    <!-- Action - Factures √† valider (pour comptable) -->
    <record id="action_potting_forwarding_invoice_to_validate" model="ir.actions.act_window">
        <field name="name">Factures √† Valider</field>
        <field name="res_model">potting.forwarding.agent.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="context">{'search_default_to_validate': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune facture √† valider
            </p>
            <p>
                Les factures soumises par le shipping appara√Ætront ici.
            </p>
        </field>
    </record>
    
    <!-- Action - Factures pr√™tes pour paiement -->
    <record id="action_potting_forwarding_invoice_ready_payment" model="ir.actions.act_window">
        <field name="name">Factures Pr√™tes au Paiement</field>
        <field name="res_model">potting.forwarding.agent.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'validated')]</field>
        <field name="context">{'search_default_validated': 1}</field>
    </record>
    
</odoo>
