<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Dashboard Comptable -->
    <t t-name="potting_management.AccountantDashboard">
        <div class="o_potting_dashboard">
            <!-- Header -->
            <div class="dashboard-header">
                <h1 class="dashboard-title">
                    <i class="fa fa-calculator me-2"/>Tableau de bord Comptable
                </h1>
                <p class="dashboard-subtitle">Gestion des factures transitaires et paiements</p>
            </div>

            <!-- Actions rapides -->
            <div class="quick-actions mb-4">
                <button class="btn btn-warning" t-on-click="openInvoicesToValidate">
                    <i class="fa fa-check-circle me-1"/>Factures à valider
                    <span class="badge bg-light text-dark ms-1" t-esc="state.invoiceStats.submitted"/>
                </button>
                <button class="btn btn-success" t-on-click="openInvoicesReadyPayment">
                    <i class="fa fa-money me-1"/>Prêtes au paiement
                    <span class="badge bg-light text-dark ms-1" t-esc="state.invoiceStats.ready_payment"/>
                </button>
                <button class="btn btn-info" t-on-click="openPendingPayments">
                    <i class="fa fa-credit-card me-1"/>Paiements en attente
                    <span class="badge bg-light text-dark ms-1" t-esc="state.paymentStats.pending"/>
                </button>
                <button class="btn btn-outline-primary" t-on-click="openInvoiceList">
                    <i class="fa fa-list me-1"/>Toutes les factures
                </button>
                <button class="btn btn-outline-secondary" t-on-click="openFormuleList">
                    <i class="fa fa-file-text me-1"/>Formules
                </button>
            </div>

            <!-- Campagne active -->
            <t t-if="state.currentCampaign">
                <div class="mb-4">
                    <div class="card campaign-banner">
                        <div class="card-body py-2">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-calendar-check-o text-primary me-2"/>
                                <span class="text-muted me-2">Campagne active:</span>
                                <strong class="text-primary"><t t-esc="state.currentCampaign.name"/></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

            <!-- ========== SECTION FACTURES TRANSITAIRES ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-file-invoice"/>Factures Transitaires
                </div>
                
                <!-- Stats factures -->
                <div class="row g-3 mb-3">
                    <div class="col-md-2">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openInvoiceList()">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.invoiceStats.total"/>
                                <div class="stat-label">Total factures</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openInvoicesByState('draft')">
                            <div class="stat-card">
                                <div class="stat-value text-secondary" t-esc="state.invoiceStats.draft"/>
                                <div class="stat-label">Brouillon</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-info cursor-pointer" t-on-click="openInvoicesToValidate">
                            <div class="stat-card">
                                <div class="stat-value text-info" t-esc="state.invoiceStats.submitted"/>
                                <div class="stat-label">À valider</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-warning cursor-pointer" t-on-click="openInvoicesReadyPayment">
                            <div class="stat-card">
                                <div class="stat-value text-warning" t-esc="state.invoiceStats.ready_payment"/>
                                <div class="stat-label">Prêtes paiement</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-success cursor-pointer" t-on-click="() => this.openInvoicesByState('paid')">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.invoiceStats.paid"/>
                                <div class="stat-label">Payées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-danger cursor-pointer" t-on-click="() => this.openInvoicesByState('rejected')">
                            <div class="stat-card">
                                <div class="stat-value text-danger" t-esc="state.invoiceStats.rejected"/>
                                <div class="stat-label">Rejetées</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Montants factures -->
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="stat-card">
                                <div class="stat-value text-primary">
                                    <t t-esc="formatCurrency(state.invoiceAmounts.total)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Montant total factures</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-accent-warning">
                            <div class="stat-card">
                                <div class="stat-value text-warning">
                                    <t t-esc="formatCurrency(state.invoiceAmounts.ready_payment)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">À payer</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success">
                                    <t t-esc="formatCurrency(state.invoiceAmounts.paid)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Déjà payé</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-accent-info">
                            <div class="stat-card">
                                <div class="stat-value text-info">
                                    <t t-esc="formatCurrency(state.invoiceAmounts.pending)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">En cours de traitement</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== SECTION PAIEMENTS TRANSITAIRES ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-credit-card"/>Paiements Transitaires
                </div>
                
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openPaymentList()">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.paymentStats.total"/>
                                <div class="stat-label">Total paiements</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-warning cursor-pointer" t-on-click="openPendingPayments">
                            <div class="stat-card">
                                <div class="stat-value text-warning" t-esc="state.paymentStats.pending"/>
                                <div class="stat-label">En attente</div>
                                <div class="text-muted small mt-1">
                                    <t t-esc="formatCurrency(state.paymentAmounts.pending)"/> FCFA
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-success cursor-pointer" t-on-click="() => this.openPaymentsByState('executed')">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.paymentStats.executed"/>
                                <div class="stat-label">Exécutés</div>
                                <div class="text-muted small mt-1">
                                    <t t-esc="formatCurrency(state.paymentAmounts.executed)"/> FCFA
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-danger cursor-pointer" t-on-click="() => this.openPaymentsByState('rejected')">
                            <div class="stat-card">
                                <div class="stat-value text-danger" t-esc="state.paymentStats.rejected"/>
                                <div class="stat-label">Rejetés</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== SECTION PAIEMENTS FORMULES (Producteurs) ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-users"/>Paiements Producteurs (Formules)
                </div>
                
                <div class="row g-3 mb-3">
                    <div class="col-md-3">
                        <div class="card h-100 cursor-pointer" t-on-click="openFormuleList">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.formulePaymentStats.total_formules"/>
                                <div class="stat-label">Total formules</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-warning cursor-pointer" t-on-click="openFormulesPendingPayment">
                            <div class="stat-card">
                                <div class="stat-value text-warning" t-esc="state.formulePaymentStats.awaiting_payment + state.formulePaymentStats.partial_paid"/>
                                <div class="stat-label">En attente paiement</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.formulePaymentStats.paid"/>
                                <div class="stat-label">Entièrement payées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-info">
                            <div class="stat-card">
                                <div class="stat-value text-info" t-esc="state.formulePaymentStats.partial_paid"/>
                                <div class="stat-label">Partiellement payées</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Montants formules -->
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="stat-card">
                                <div class="stat-value text-primary">
                                    <t t-esc="formatCurrency(state.formulePaymentStats.total_montant)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Montant total à reverser</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success">
                                    <t t-esc="formatCurrency(state.formulePaymentStats.total_paye)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Déjà reversé</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-danger">
                            <div class="stat-card">
                                <div class="stat-value text-danger">
                                    <t t-esc="formatCurrency(state.formulePaymentStats.reste_a_payer)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Reste à reverser</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Barre de progression -->
                <div class="card mt-3">
                    <div class="card-body py-2">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted small">Progression des reversements producteurs</span>
                            <span class="fw-bold">
                                <t t-esc="state.formulePaymentStats.total_montant > 0 ? formatNumber(state.formulePaymentStats.total_paye / state.formulePaymentStats.total_montant * 100, 1) : 0"/>%
                            </span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-success" 
                                 t-attf-style="width: #{state.formulePaymentStats.total_montant > 0 ? Math.min(state.formulePaymentStats.total_paye / state.formulePaymentStats.total_montant * 100, 100) : 0}%"/>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== LISTES ========== -->
            <div class="row g-3">
                <!-- Factures à valider -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center bg-info text-white">
                            <span><i class="fa fa-check-circle me-2"/>Factures à valider</span>
                            <button class="btn btn-sm btn-light" t-on-click="openInvoicesToValidate">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.invoicesToValidate.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Transitaire</th>
                                            <th class="text-end">Montant</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.invoicesToValidate" t-as="invoice" t-key="invoice.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openInvoice(invoice.id)">
                                                <td><strong><t t-esc="invoice.reference"/></strong></td>
                                                <td><t t-esc="invoice.forwarding_agent_id ? invoice.forwarding_agent_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold"><t t-esc="formatCurrency(invoice.amount_total)"/> FCFA</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Aucune facture à valider</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Factures prêtes au paiement -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center bg-warning">
                            <span><i class="fa fa-money me-2"/>Prêtes au paiement</span>
                            <button class="btn btn-sm btn-light" t-on-click="openInvoicesReadyPayment">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.invoicesReadyPayment.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Transitaire</th>
                                            <th class="text-end">Montant</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.invoicesReadyPayment" t-as="invoice" t-key="invoice.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openInvoice(invoice.id)">
                                                <td><strong><t t-esc="invoice.reference"/></strong></td>
                                                <td><t t-esc="invoice.forwarding_agent_id ? invoice.forwarding_agent_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold text-warning"><t t-esc="formatCurrency(invoice.amount_total)"/> FCFA</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Aucune facture en attente de paiement</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ligne 2 des listes -->
            <div class="row g-3 mt-3">
                <!-- Paiements en attente -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-credit-card text-primary me-2"/>Paiements transitaires en attente</span>
                            <button class="btn btn-sm btn-link" t-on-click="openPendingPayments">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.pendingPayments.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Transitaire</th>
                                            <th class="text-end">Montant</th>
                                            <th>Date prévue</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.pendingPayments" t-as="payment" t-key="payment.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openPayment(payment.id)">
                                                <td><strong><t t-esc="payment.reference"/></strong></td>
                                                <td><t t-esc="payment.forwarding_agent_id ? payment.forwarding_agent_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold"><t t-esc="formatCurrency(payment.amount)"/> FCFA</td>
                                                <td><t t-esc="formatDate(payment.payment_date)"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Aucun paiement en attente</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Formules en attente de paiement -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-users text-success me-2"/>Formules en attente de reversement</span>
                            <button class="btn btn-sm btn-link" t-on-click="openFormulesPendingPayment">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.formulesPendingPayment.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>OT</th>
                                            <th class="text-end">Reste à payer</th>
                                            <th>État</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.formulesPendingPayment" t-as="formule" t-key="formule.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openFormule(formule.id)">
                                                <td><strong><t t-esc="formule.reference"/></strong></td>
                                                <td><t t-esc="formule.ot_id ? formule.ot_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold text-danger"><t t-esc="formatCurrency(formule.reste_a_payer)"/> FCFA</td>
                                                <td>
                                                    <span t-attf-class="badge #{getFormuleStateClass(formule.state)}">
                                                        <t t-esc="getStateLabel(formule.state)"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Toutes les formules sont payées</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
