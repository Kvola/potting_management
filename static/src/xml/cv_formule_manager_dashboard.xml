<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Dashboard Responsable CV/Formules -->
    <t t-name="potting_management.CvFormuleManagerDashboard">
        <div class="o_potting_dashboard">
            <!-- Header -->
            <div class="dashboard-header">
                <h1 class="dashboard-title">
                    <i class="fa fa-file-text-o me-2"/>Tableau de bord CV/Formules
                </h1>
                <p class="dashboard-subtitle">Gestion de la Réglementation CCC - Confirmations de Vente et Formules</p>
            </div>

            <!-- Actions rapides -->
            <div class="quick-actions mb-4">
                <button class="btn btn-primary" t-on-click="createCV">
                    <i class="fa fa-plus me-1"/>Nouvelle CV
                </button>
                <button class="btn btn-success" t-on-click="createFormule">
                    <i class="fa fa-plus me-1"/>Nouvelle Formule
                </button>
                <button class="btn btn-outline-primary" t-on-click="openCVList">
                    <i class="fa fa-list me-1"/>Liste des CV
                </button>
                <button class="btn btn-outline-success" t-on-click="openFormuleList">
                    <i class="fa fa-list me-1"/>Liste des Formules
                </button>
                <button class="btn btn-outline-info" t-on-click="openAllocationList">
                    <i class="fa fa-link me-1"/>Allocations CV
                </button>
            </div>

            <!-- Campagne active -->
            <t t-if="state.currentCampaign">
                <div class="mb-4">
                    <div class="card campaign-banner">
                        <div class="card-body py-3">
                            <div class="d-flex align-items-center">
                                <div class="me-4">
                                    <div class="section-title mb-0">
                                        <i class="fa fa-calendar-check-o"/>
                                        Campagne active
                                    </div>
                                    <h4 class="mb-0 mt-1 text-primary">
                                        <t t-esc="state.currentCampaign.name"/>
                                    </h4>
                                </div>
                                <div class="ms-auto text-muted">
                                    Code: <strong><t t-esc="state.currentCampaign.code"/></strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

            <!-- ========== SECTION CV ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-certificate"/>Confirmations de Vente (CV)
                </div>
                
                <!-- Stats CV -->
                <div class="row g-3 mb-3">
                    <div class="col-md-2">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openCVList()">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.cvStats.total"/>
                                <div class="stat-label">Total CV</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-success cursor-pointer" t-on-click="() => this.openCVsByState('active')">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.cvStats.active"/>
                                <div class="stat-label">CV Actives</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-warning cursor-pointer" t-on-click="() => this.openExpiringCVs()">
                            <div class="stat-card">
                                <div class="stat-value text-warning" t-esc="state.cvStats.expiring_soon"/>
                                <div class="stat-label">Expire &lt; 30j</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-danger cursor-pointer" t-on-click="() => this.openCVsByState('expired')">
                            <div class="stat-card">
                                <div class="stat-value text-danger" t-esc="state.cvStats.expired"/>
                                <div class="stat-label">CV Expirées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-info cursor-pointer" t-on-click="() => this.openCVsByState('consumed')">
                            <div class="stat-card">
                                <div class="stat-value text-info" t-esc="state.cvStats.consumed"/>
                                <div class="stat-label">CV Consommées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100">
                            <div class="stat-card">
                                <div class="stat-value text-secondary" t-esc="state.cvStats.total - state.cvStats.active - state.cvStats.expired - state.cvStats.consumed"/>
                                <div class="stat-label">CV Brouillon</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tonnages CV -->
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="stat-card">
                                <div class="stat-value text-primary">
                                    <t t-esc="formatNumber(state.cvStats.tonnage_autorise, 0)"/> T
                                </div>
                                <div class="stat-label">Tonnage autorisé total</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-warning">
                            <div class="stat-card">
                                <div class="stat-value text-warning">
                                    <t t-esc="formatNumber(state.cvStats.tonnage_utilise, 0)"/> T
                                </div>
                                <div class="stat-label">Tonnage utilisé</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success">
                                    <t t-esc="formatNumber(state.cvStats.tonnage_disponible, 0)"/> T
                                </div>
                                <div class="stat-label">Tonnage disponible</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Barre de progression -->
                <div class="card mt-3">
                    <div class="card-body py-2">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted small">Utilisation des CV</span>
                            <span class="fw-bold">
                                <t t-esc="state.cvStats.tonnage_autorise > 0 ? formatNumber(state.cvStats.tonnage_utilise / state.cvStats.tonnage_autorise * 100, 1) : 0"/>%
                            </span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-warning" 
                                 t-attf-style="width: #{state.cvStats.tonnage_autorise > 0 ? Math.min(state.cvStats.tonnage_utilise / state.cvStats.tonnage_autorise * 100, 100) : 0}%"/>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== SECTION FORMULES ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-file-text"/>Formules (FO)
                </div>
                
                <!-- Stats Formules -->
                <div class="row g-3 mb-3">
                    <div class="col-md-2">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openFormuleList()">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.formuleStats.total"/>
                                <div class="stat-label">Total Formules</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openFormulesByState('draft')">
                            <div class="stat-card">
                                <div class="stat-value text-secondary" t-esc="state.formuleStats.draft"/>
                                <div class="stat-label">Brouillon</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-primary cursor-pointer" t-on-click="() => this.openFormulesByState('validated')">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.formuleStats.validated"/>
                                <div class="stat-label">Validées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-warning cursor-pointer" t-on-click="() => this.openFormulesByState('partial_paid')">
                            <div class="stat-card">
                                <div class="stat-value text-warning" t-esc="state.formuleStats.partial_paid"/>
                                <div class="stat-label">Part. payées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-success cursor-pointer" t-on-click="() => this.openFormulesByState('paid')">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.formuleStats.paid"/>
                                <div class="stat-label">Payées</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card h-100 border-accent-danger cursor-pointer" t-on-click="() => this.openPendingFormules()">
                            <div class="stat-card">
                                <div class="stat-value text-danger" t-esc="state.formuleStats.draft + state.formuleStats.validated + state.formuleStats.partial_paid"/>
                                <div class="stat-label">En attente</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Montants Formules -->
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="stat-card">
                                <div class="stat-value text-primary">
                                    <t t-esc="formatCurrency(state.formuleStats.total_montant)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Montant total des formules</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success">
                                    <t t-esc="formatCurrency(state.formuleStats.total_paye)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Montant payé</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-accent-danger">
                            <div class="stat-card">
                                <div class="stat-value text-danger">
                                    <t t-esc="formatCurrency(state.formuleStats.reste_a_payer)"/>
                                    <small class="ms-1">FCFA</small>
                                </div>
                                <div class="stat-label">Reste à payer</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== SECTION ALLOCATIONS ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-link"/>Allocations CV-Contrats
                </div>
                
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card h-100 cursor-pointer" t-on-click="() => this.openAllocationList()">
                            <div class="stat-card">
                                <div class="stat-value text-primary" t-esc="state.allocationStats.total"/>
                                <div class="stat-label">Total allocations</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-success">
                            <div class="stat-card">
                                <div class="stat-value text-success" t-esc="state.allocationStats.active"/>
                                <div class="stat-label">Allocations actives</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100">
                            <div class="stat-card">
                                <div class="stat-value text-warning">
                                    <t t-esc="formatNumber(state.allocationStats.tonnage_alloue, 0)"/> T
                                </div>
                                <div class="stat-label">Tonnage alloué</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100 border-accent-info">
                            <div class="stat-card">
                                <div class="stat-value text-info">
                                    <t t-esc="formatNumber(state.allocationStats.tonnage_utilise, 0)"/> T
                                </div>
                                <div class="stat-label">Tonnage utilisé</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== LISTES ========== -->
            <div class="row g-3">
                <!-- CV expirant bientôt -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-exclamation-triangle text-warning me-2"/>CV expirant dans 30 jours</span>
                            <button class="btn btn-sm btn-link" t-on-click="openExpiringCVs">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.expiringCVs.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Client</th>
                                            <th class="text-end">Dispo (T)</th>
                                            <th>Expire le</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.expiringCVs" t-as="cv" t-key="cv.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openCV(cv.id)">
                                                <td><t t-esc="cv.reference"/></td>
                                                <td><t t-esc="cv.client_id ? cv.client_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold"><t t-esc="formatNumber(cv.tonnage_disponible, 0)"/></td>
                                                <td class="text-danger"><t t-esc="formatDate(cv.date_validite)"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Aucune CV n'expire dans les 30 prochains jours</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Formules en attente -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-clock-o text-warning me-2"/>Formules en attente</span>
                            <button class="btn btn-sm btn-link" t-on-click="openPendingFormules">Voir tout</button>
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.formulesPending.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>OT</th>
                                            <th class="text-end">Reste (FCFA)</th>
                                            <th>État</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.formulesPending" t-as="formule" t-key="formule.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.openFormule(formule.id)">
                                                <td><t t-esc="formule.reference"/></td>
                                                <td><t t-esc="formule.ot_id ? formule.ot_id[1] : '-'"/></td>
                                                <td class="text-end fw-bold text-danger"><t t-esc="formatCurrency(formule.reste_a_payer)"/></td>
                                                <td>
                                                    <span t-attf-class="badge #{getFormuleStateClass(formule.state)}">
                                                        <t t-esc="getStateLabel(formule.state)"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">Toutes les formules sont payées</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistiques par type de produit -->
            <t t-if="state.productStats.length > 0">
                <div class="mt-4">
                    <div class="section-title">
                        <i class="fa fa-cubes"/>Répartition par type de produit
                    </div>
                    <div class="card">
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Type de produit</th>
                                        <th class="text-end">Tonnage autorisé</th>
                                        <th class="text-end">Tonnage utilisé</th>
                                        <th class="text-end">Utilisation</th>
                                        <th style="width: 200px;">Progression</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.productStats" t-as="product" t-key="product.product_type">
                                        <tr>
                                            <td><t t-esc="getProductTypeLabel(product.product_type)"/></td>
                                            <td class="text-end"><t t-esc="formatNumber(product.tonnage_autorise, 0)"/> T</td>
                                            <td class="text-end"><t t-esc="formatNumber(product.tonnage_utilise, 0)"/> T</td>
                                            <td class="text-end fw-bold"><t t-esc="product.pourcentage"/>%</td>
                                            <td>
                                                <div class="progress" style="height: 8px;">
                                                    <div class="progress-bar bg-success" 
                                                         t-attf-style="width: #{Math.min(product.pourcentage, 100)}%"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>

            <!-- CV récentes -->
            <div class="mt-4">
                <div class="section-title">
                    <i class="fa fa-history"/>CV récentes
                </div>
                <div class="card">
                    <div class="card-body p-0">
                        <t t-if="state.recentCVs.length > 0">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Client</th>
                                        <th class="text-end">Autorisé (T)</th>
                                        <th class="text-end">Disponible (T)</th>
                                        <th>Validité</th>
                                        <th>État</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.recentCVs" t-as="cv" t-key="cv.id">
                                        <tr class="cursor-pointer" t-on-click="() => this.openCV(cv.id)">
                                            <td><strong><t t-esc="cv.reference"/></strong></td>
                                            <td><t t-esc="cv.client_id ? cv.client_id[1] : '-'"/></td>
                                            <td class="text-end"><t t-esc="formatNumber(cv.tonnage_autorise, 0)"/></td>
                                            <td class="text-end fw-bold text-success"><t t-esc="formatNumber(cv.tonnage_disponible, 0)"/></td>
                                            <td><t t-esc="formatDate(cv.date_validite)"/></td>
                                            <td>
                                                <span t-attf-class="badge #{getCvStateClass(cv.state)}">
                                                    <t t-esc="getStateLabel(cv.state)"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <div class="p-3 text-center text-muted">
                                <p class="mb-0">Aucune CV enregistrée</p>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
