<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Dashboard Utilisateur de base -->
    <t t-name="potting_management.UserDashboard">
        <div class="o_potting_dashboard">
            <!-- Header -->
            <div class="dashboard-header">
                <h1 class="dashboard-title">
                    <i class="fa fa-home me-2"/>Tableau de bord Exportations
                </h1>
                <p class="dashboard-subtitle">Vue d'ensemble des opérations d'exportation</p>
            </div>

            <!-- Liens rapides -->
            <div class="quick-actions mb-4">
                <button class="btn btn-outline-primary" t-on-click="viewTransitOrders">
                    <i class="fa fa-truck me-1"/>Voir les OT
                </button>
                <button class="btn btn-outline-success" t-on-click="viewLots">
                    <i class="fa fa-cubes me-1"/>Voir les Lots
                </button>
            </div>

            <!-- Campagne active -->
            <t t-if="state.currentCampaign">
                <div class="mb-4">
                    <div class="card campaign-banner">
                        <div class="card-body py-3">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-calendar-check-o fa-2x text-primary me-3"/>
                                <div>
                                    <div class="small text-muted">Campagne en cours</div>
                                    <h4 class="mb-0 text-primary">
                                        <t t-esc="state.currentCampaign.name"/>
                                    </h4>
                                    <small class="text-muted">
                                        Code: <t t-esc="state.currentCampaign.code"/> | 
                                        Du <t t-esc="formatDate(state.currentCampaign.date_start)"/> 
                                        au <t t-esc="formatDate(state.currentCampaign.date_end)"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

            <!-- ========== RÉSUMÉ GLOBAL ========== -->
            <div class="mb-4">
                <div class="section-title">
                    <i class="fa fa-bar-chart"/>Résumé
                </div>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card h-100">
                            <div class="stat-card">
                                <i class="fa fa-file-text fa-2x text-primary mb-2"/>
                                <div class="stat-value text-primary" t-esc="state.summary.total_contracts"/>
                                <div class="stat-label">Contrats</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100">
                            <div class="stat-card">
                                <i class="fa fa-truck fa-2x text-info mb-2"/>
                                <div class="stat-value text-info" t-esc="state.summary.total_ot"/>
                                <div class="stat-label">Ordres de Transit</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100">
                            <div class="stat-card">
                                <i class="fa fa-cubes fa-2x text-success mb-2"/>
                                <div class="stat-value text-success" t-esc="state.summary.total_lots"/>
                                <div class="stat-label">Lots</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card h-100">
                            <div class="stat-card">
                                <i class="fa fa-balance-scale fa-2x text-warning mb-2"/>
                                <div class="stat-value text-warning">
                                    <t t-esc="formatNumber(state.summary.total_tonnage, 0)"/>
                                </div>
                                <div class="stat-label">Tonnage empoté (T)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== STATUTS OT ET LOTS ========== -->
            <div class="row g-3 mb-4">
                <!-- OT par état -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-truck me-2"/>Ordres de Transit</span>
                            <button class="btn btn-sm btn-link" t-on-click="viewTransitOrders">Voir tout</button>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-4">
                                    <div class="text-center p-3 bg-secondary bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-secondary"><t t-esc="state.otStats.draft"/></div>
                                        <small class="text-muted">Brouillon</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center p-3 bg-info bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-info"><t t-esc="state.otStats.in_progress"/></div>
                                        <small class="text-muted">En cours</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-success"><t t-esc="state.otStats.done"/></div>
                                        <small class="text-muted">Terminés</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lots par état -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa fa-cubes me-2"/>Lots</span>
                            <button class="btn btn-sm btn-link" t-on-click="viewLots">Voir tout</button>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-4">
                                    <div class="text-center p-3 bg-warning bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-warning"><t t-esc="state.lotStats.in_production"/></div>
                                        <small class="text-muted">En production</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center p-3 bg-primary bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-primary"><t t-esc="state.lotStats.ready"/></div>
                                        <small class="text-muted">Prêts</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                                        <div class="fs-3 fw-bold text-success"><t t-esc="state.lotStats.potted"/></div>
                                        <small class="text-muted">Empotés</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== LISTES RÉCENTES ========== -->
            <div class="row g-3">
                <!-- OT récents -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-clock-o me-2"/>Ordres de Transit récents
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.recentOT.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Client</th>
                                            <th class="text-end">Tonnage</th>
                                            <th>État</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.recentOT" t-as="ot" t-key="ot.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.viewOT(ot.id)">
                                                <td><strong><t t-esc="ot.reference"/></strong></td>
                                                <td><t t-esc="ot.customer_id ? ot.customer_id[1] : '-'"/></td>
                                                <td class="text-end"><t t-esc="formatNumber(ot.total_tonnage, 0)"/> T</td>
                                                <td>
                                                    <span t-attf-class="badge #{getStateClass(ot.state)}">
                                                        <t t-esc="getStateLabel(ot.state)"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-inbox fa-2x mb-2"/>
                                    <p class="mb-0">Aucun OT récent</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Lots récents -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-clock-o me-2"/>Lots récents
                        </div>
                        <div class="card-body p-0">
                            <t t-if="state.recentLots.length > 0">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Produit</th>
                                            <th class="text-end">Tonnage</th>
                                            <th>État</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.recentLots" t-as="lot" t-key="lot.id">
                                            <tr class="cursor-pointer" t-on-click="() => this.viewLot(lot.id)">
                                                <td><strong><t t-esc="lot.name"/></strong></td>
                                                <td><t t-esc="getProductTypeLabel(lot.product_type)"/></td>
                                                <td class="text-end"><t t-esc="formatNumber(lot.current_tonnage, 0)"/> T</td>
                                                <td>
                                                    <span t-attf-class="badge #{getStateClass(lot.state)}">
                                                        <t t-esc="getStateLabel(lot.state)"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="p-3 text-center text-muted">
                                    <i class="fa fa-inbox fa-2x mb-2"/>
                                    <p class="mb-0">Aucun lot récent</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Message d'aide -->
            <div class="mt-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <i class="fa fa-info-circle text-info me-2"/>
                        <span class="text-muted">
                            Vous êtes connecté en tant qu'utilisateur de base. 
                            Contactez votre administrateur pour accéder à plus de fonctionnalités.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
