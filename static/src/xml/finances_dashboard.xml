<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- ================================================================
         DASHBOARD FINANCES - Factures, Paiements, Taxes
         Simplifié et actionnable
         ================================================================ -->
    <t t-name="potting_management.FinancesDashboard">
        <div class="o_potting_dashboard">
            <!-- Header -->
            <div class="dashboard-header mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">
                            <i class="fa fa-calculator me-2 text-success"/>Finances
                        </h2>
                        <small class="text-muted">Factures, paiements et taxes</small>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-warning btn-sm" t-on-click="openInvoicesToValidate">
                            <i class="fa fa-check-circle me-1"/>À valider
                            <span class="badge bg-light text-dark ms-1" t-esc="state.invoices.to_validate"/>
                        </button>
                        <button class="btn btn-success btn-sm" t-on-click="openInvoicesReady">
                            <i class="fa fa-money me-1"/>Prêtes au paiement
                        </button>
                    </div>
                </div>
            </div>

            <!-- ========== RÉSUMÉ MONTANTS ========== -->
            <div class="row g-3 mb-4">
                <div class="col-md-3 col-6">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fa fa-file-text fa-2x text-primary mb-2"/>
                            <div class="fs-5 fw-bold text-primary">
                                <t t-esc="formatCurrency(state.amounts.total_invoices)"/>
                            </div>
                            <small class="text-muted">Total factures</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card h-100 border-warning">
                        <div class="card-body text-center">
                            <i class="fa fa-hourglass-half fa-2x text-warning mb-2"/>
                            <div class="fs-5 fw-bold text-warning">
                                <t t-esc="formatCurrency(state.amounts.pending)"/>
                            </div>
                            <small class="text-muted">En attente</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <i class="fa fa-check-circle fa-2x text-success mb-2"/>
                            <div class="fs-5 fw-bold text-success">
                                <t t-esc="formatCurrency(state.amounts.paid)"/>
                            </div>
                            <small class="text-muted">Payé</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card h-100 border-info">
                        <div class="card-body text-center">
                            <i class="fa fa-credit-card fa-2x text-info mb-2"/>
                            <div class="fs-5 fw-bold text-info">
                                <t t-esc="state.payments.count"/>
                            </div>
                            <small class="text-muted">Paiements ce mois</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== FACTURES TRANSITAIRES ========== -->
            <div class="card mb-4">
                <div class="card-header py-2 bg-light d-flex justify-content-between align-items-center">
                    <strong><i class="fa fa-file-text-o me-2"/>Factures Transitaires</strong>
                    <button class="btn btn-sm btn-link" t-on-click="openAllInvoices">Voir tout →</button>
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded cursor-pointer" 
                                 t-on-click="() => this.openInvoicesByState('draft')">
                                <div class="fs-4 fw-bold text-secondary"><t t-esc="state.invoices.draft"/></div>
                                <small class="text-muted">Brouillon</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded cursor-pointer border-info" 
                                 t-on-click="openInvoicesToValidate">
                                <div class="fs-4 fw-bold text-info"><t t-esc="state.invoices.to_validate"/></div>
                                <small class="text-muted">À valider</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded cursor-pointer border-warning" 
                                 t-on-click="openInvoicesReady">
                                <div class="fs-4 fw-bold text-warning"><t t-esc="state.invoices.ready_payment"/></div>
                                <small class="text-muted">Prêtes</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded cursor-pointer border-success" 
                                 t-on-click="() => this.openInvoicesByState('paid')">
                                <div class="fs-4 fw-bold text-success"><t t-esc="state.invoices.paid"/></div>
                                <small class="text-muted">Payées</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded cursor-pointer border-danger" 
                                 t-on-click="() => this.openInvoicesByState('rejected')">
                                <div class="fs-4 fw-bold text-danger"><t t-esc="state.invoices.rejected"/></div>
                                <small class="text-muted">Rejetées</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-2">
                            <div class="text-center p-2 border rounded">
                                <div class="fs-4 fw-bold"><t t-esc="state.invoices.total"/></div>
                                <small class="text-muted">Total</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ========== PAIEMENTS & TAXES ========== -->
            <div class="row g-3">
                <!-- Paiements récents -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header py-2 bg-light d-flex justify-content-between align-items-center">
                            <strong><i class="fa fa-credit-card me-2"/>Paiements</strong>
                            <button class="btn btn-sm btn-link" t-on-click="openPayments">Voir tout →</button>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="fs-4 fw-bold text-warning"><t t-esc="state.payments.pending"/></div>
                                    <small class="text-muted">En attente</small>
                                </div>
                                <div class="col-4">
                                    <div class="fs-4 fw-bold text-info"><t t-esc="state.payments.processing"/></div>
                                    <small class="text-muted">En cours</small>
                                </div>
                                <div class="col-4">
                                    <div class="fs-4 fw-bold text-success"><t t-esc="state.payments.completed"/></div>
                                    <small class="text-muted">Effectués</small>
                                </div>
                            </div>
                            <div class="border-top pt-2">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Montant en attente:</span>
                                    <strong class="text-warning"><t t-esc="formatCurrency(state.payments.pending_amount)"/> FCFA</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Taxes (Formules) -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header py-2 bg-light d-flex justify-content-between align-items-center">
                            <strong><i class="fa fa-university me-2"/>Taxes (Formules)</strong>
                            <button class="btn btn-sm btn-link" t-on-click="openFormules">Voir tout →</button>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <div class="p-2 bg-success bg-opacity-10 rounded">
                                        <div class="fs-4 fw-bold text-success"><t t-esc="state.taxes.avant_vente_paid"/></div>
                                        <small class="text-muted">Formules payées</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 bg-info bg-opacity-10 rounded">
                                        <div class="fs-4 fw-bold text-info"><t t-esc="state.taxes.dus_paid"/></div>
                                        <small class="text-muted">OT DUS payé</small>
                                    </div>
                                </div>
                            </div>
                            <div class="border-top pt-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted">Total taxes calculées:</span>
                                    <strong><t t-esc="formatCurrency(state.taxes.total_amount)"/> FCFA</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">OT en attente DUS:</span>
                                    <strong class="text-warning"><t t-esc="state.taxes.waiting_dus"/></strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
